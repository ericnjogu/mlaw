<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.1.xsd">
	
<!-- hibernate configs adapted from http://www.vaannila.com/spring/spring-hibernate-integration-1.html -->
	<bean id="mySessionFactory"
		class="org.springframework.orm.hibernate3.annotation.AnnotationSessionFactoryBean">
		<property name="dataSource" ref="myDataSource" />
		<property name="annotatedClasses">
			<list>
			<value>org.martinlaw.bo.courtcase.CourtCaseCollectionBase</value>
				<value>org.martinlaw.bo.courtcase.CourtCaseFee</value>
				<value>org.martinlaw.bo.Status</value>
				<value>org.martinlaw.bo.Fee</value>
				<value>org.martinlaw.bo.sequence.CaseFeeSeq</value>
				<value>org.martinlaw.bo.sequence.StatusSeq</value>
				
				<value>org.martinlaw.bo.CalendarEvent</value>
				<value>org.martinlaw.bo.DateType</value>
				
				<value>org.martinlaw.bo.courtcase.CourtCaseDate</value>
				<value>org.martinlaw.bo.courtcase.CourtCaseWitness</value>
				<value>org.martinlaw.bo.courtcase.CourtCaseClient</value>
				<value>org.martinlaw.bo.courtcase.Assignee</value>
				<value>org.martinlaw.bo.courtcase.Assignment</value>
				<value>org.martinlaw.bo.sequence.WitnessSeq</value>
				<value>org.martinlaw.bo.sequence.CaseClientSeq</value>
				<value>org.martinlaw.bo.courtcase.CourtCasePerson</value>
				<value>org.martinlaw.bo.courtcase.CourtCase</value>
				<value>org.martinlaw.bo.sequence.CaseSeq</value>
				<value>org.martinlaw.bo.sequence.CaseAssigneeSeq</value>
				<value>org.martinlaw.bo.sequence.CaseAssignmentSeq</value>
				
				<value>org.martinlaw.bo.conveyance.ConveyanceAnnexType</value>
				<value>org.martinlaw.bo.conveyance.ConveyanceType</value>
				<value>org.martinlaw.bo.sequence.ConveyAnnexTypeSeq</value>
				<value>org.martinlaw.bo.sequence.ConveyTypeSeq</value>
				<value>org.martinlaw.bo.MartinlawPerson</value>
				<value>org.martinlaw.bo.sequence.ConveyAnnexSeq</value>
				<value>org.martinlaw.bo.conveyance.ConveyanceAttachment</value>
				<value>org.martinlaw.bo.conveyance.ConveyanceAnnex</value>
				<value>org.martinlaw.bo.sequence.ConveyAttSeq</value>
				<value>org.martinlaw.bo.sequence.ConveyClientSeq</value>
				<value>org.martinlaw.bo.conveyance.ConveyanceClient</value>
				<value>org.martinlaw.bo.Matter</value>
				<value>org.martinlaw.bo.MatterDate</value>
				<value>org.martinlaw.bo.sequence.ConveyFeeSeq</value>
				<value>org.martinlaw.bo.conveyance.ConveyanceFee</value>
				<value>org.martinlaw.bo.sequence.ConveySeq</value>
				<value>org.martinlaw.bo.conveyance.Conveyance</value>
				
				<value>org.martinlaw.bo.contract.ContractType</value>
				<value>org.martinlaw.bo.contract.ContractParty</value>
				<value>org.martinlaw.bo.contract.ContractSignatory</value>
				<value>org.martinlaw.bo.contract.ContractPerson</value>
				<value>org.martinlaw.bo.contract.ContractConsideration</value>
				<value>org.martinlaw.bo.contract.ContractDuration</value>
				<value>org.martinlaw.bo.contract.Contract</value>
				<value>org.martinlaw.bo.contract.Assignment</value>
				<value>org.martinlaw.bo.contract.Assignee</value>
				<value>org.martinlaw.bo.MatterAssignee</value>
				<value>org.martinlaw.bo.MatterAssignment</value>
				
				<value>org.martinlaw.bo.sequence.ContractTypeSeq</value>
				<value>org.martinlaw.bo.sequence.ContractPartySeq</value>
				<value>org.martinlaw.bo.sequence.ContractSignatorySeq</value>
				<value>org.martinlaw.bo.sequence.ContractAssigneeSeq</value>
				<value>org.martinlaw.bo.sequence.ContractAssignmentSeq</value>
				<value>org.martinlaw.bo.sequence.ContractSeq</value>
				
				<value>org.martinlaw.bo.conveyance.Assignee</value>
				<value>org.martinlaw.bo.conveyance.Assignment</value>
				<value>org.martinlaw.bo.sequence.ConvAssignmentSeq</value>
				<value>org.martinlaw.bo.sequence.ConvAssigneeSeq</value>
			</list>
		</property>
		<property name="hibernateProperties">
			<props>
				<prop key="hibernate.dialect">org.hibernate.dialect.MySQLDialect</prop>
				<prop key="hibernate.show_sql">true</prop>
				<prop key="hibernate.hbm2ddl.auto">create</prop>
			</props>
		</property>
	</bean>

	<!-- hibernate configs adapted from http://www.vaannila.com/spring/spring-hibernate-integration-1.html -->
	<beans profile="unt">
		<bean id="myDataSource" class="org.apache.commons.dbcp.BasicDataSource"
			destroy-method="close">
			<property name="driverClassName" value="com.mysql.jdbc.Driver" />
			<property name="url" value="jdbc:mysql://localhost:3306/mlaw_unt" />
			<property name="username" value="mlaw_unt" />
			<property name="password" value="mlaw_unt" />
		</bean>
	</beans>

	<beans profile="dev">
		<bean id="myDataSource" class="org.apache.commons.dbcp.BasicDataSource"
			destroy-method="close">
			<property name="driverClassName" value="com.mysql.jdbc.Driver" />
			<property name="url" value="jdbc:mysql://localhost:3306/mlaw_dev" />
			<property name="username" value="mlaw_dev" />
			<property name="password" value="mlaw_dev" />
		</bean>
	</beans>
	
	<beans profile="prd_template">
		<bean id="myDataSource" class="org.apache.commons.dbcp.BasicDataSource"
			destroy-method="close">
			<property name="driverClassName" value="com.mysql.jdbc.Driver" />
			<property name="url" value="jdbc:mysql://localhost:3306/mlaw_template" />
			<property name="username" value="mlaw_template" />
			<property name="password" value="mlaw_template" />
		</bean>
	</beans>

</beans>
