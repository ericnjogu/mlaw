<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:p="http://www.springframework.org/schema/p"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

<bean id="contract_LookupView" parent="Uif-LookupView">
    <property name="headerText" value="Contract Lookup" />
    <property name="dataObjectClassName" value="org.martinlaw.bo.Contract" />
    <property name="criteriaFields">
      <list>
        <bean parent="Uif-LookupCriteriaInputField" p:propertyName="id" />
        <bean parent="Uif-LookupCriteriaInputField" p:propertyName="localReference" />
        <bean parent="Uif-LookupCriteriaInputField" p:propertyName="name" />
        <bean parent="Uif-LookupCriteriaInputField" p:propertyName="typeId" />
        <bean parent="Uif-LookupCriteriaInputField" p:propertyName="statusId"/>
        
        <bean parent="Uif-LookupCriteriaInputField" p:propertyName="serviceOffered"/>
        <bean parent="Uif-LookupCriteriaInputField" p:propertyName="summaryOfTerms"/>
        
        <bean parent="Uif-LookupCriteriaInputField" p:propertyName="contractConsideration.amount" />
        <bean parent="Uif-LookupCriteriaInputField" p:propertyName="contractConsideration.currency" />
        <bean parent="Uif-LookupCriteriaInputField" p:propertyName="contractConsideration.description" />
        
        <bean parent="Uif-LookupCriteriaInputField" p:propertyName="contractDuration.startDate"/>
        <bean parent="Uif-LookupCriteriaInputField" p:propertyName="contractDuration.endDate" />
        <bean parent="Uif-LookupCriteriaInputField" p:propertyName="contractDuration.duration" />
        <bean parent="Uif-LookupCriteriaInputField" p:propertyName="contractDuration.durationTimeUnit" />
      </list>
    </property>
    <property name="resultFields">
      <list>
         <bean parent="Uif-DataField" p:propertyName="id" />
        <bean parent="Uif-DataField" p:propertyName="localReference" />
        <bean parent="Uif-DataField" p:propertyName="name" />
        <bean parent="Uif-DataField" p:propertyName="type.name" />
        <bean parent="Uif-DataField" p:propertyName="status.status"/>
        <bean parent="Uif-DataField" p:propertyName="contractConsideration.amount" />
        <bean parent="Uif-DataField" p:propertyName="contractConsideration.currency" />
        <bean parent="Uif-DataField" p:propertyName="contractDuration.startDate"/>
        <bean parent="Uif-DataField" p:propertyName="contractDuration.endDate" />
      </list>
    </property>
  </bean>
</beans>
