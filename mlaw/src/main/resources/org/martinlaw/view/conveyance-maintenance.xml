<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:p="http://www.springframework.org/schema/p"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
                    http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">


	<bean id="conveyance_maintenance_view" parent="Uif-MaintenanceView">
		<property name="headerText" value="Conveyance Maintenance" />
		<property name="dataObjectClassName" value="org.martinlaw.bo.Conveyance" />
		<property name="additionalScriptFiles">
			<list>
				<value>scripts/mlaw.js</value>
			</list>
		</property>
		<property name="additionalCssFiles">
			<list>
				<value>css/mlaw.css</value>
			</list>
		</property>
		<property name="items">
			<list><!-- contains a reordering of the notes section - so we had to include 
					all the other sections as well -->
				<bean parent="Uif-DocumentOverviewSection" />

				<bean parent="Uif-MaintenanceGridSection">
					<property name="items">
						<list>
							<bean parent="Uif-InputField" p:propertyName="id"
								p:readOnly="true" />
							<bean parent="Uif-InputField" p:propertyName="localReference" />
							<bean parent="Uif-InputField" p:propertyName="name" />
							<bean parent="Uif-InputField" p:propertyName="statusId" />
							<bean parent="Uif-HorizontalFieldGroup" p:label="Conveyance Type">
								<property name="items">
									<list>
										<ref bean="conveyance_maintenance_view_typeId" />
										<ref bean="conveyance_maintenance_view_typeMsg" />
									</list>
								</property>
							</bean>

							<!-- when the type changes, the annexes section should refresh to 
								reflect the annex types associated with the chosen conveyance type -->
						</list>
					</property>
					<property name="headerText" value="Conveyance Information" />
				</bean>

				<ref local="conveyance_maintenance_view_notes" />

				<ref local="conveyance_maintenance_view_annexes" />

				<bean parent="martinlaw_shared_client-maintenance-section">
					<property name="collectionObjectClass" value="org.martinlaw.bo.ConveyanceClient" />
				</bean>

				<bean parent="martinlaw_shared_fee-maintenance-section">
					<property name="collectionObjectClass" value="org.martinlaw.bo.ConveyanceFee" />
				</bean>

				<bean parent="Uif-DocumentAdHocRecipientsSection"
					p:disclosure.defaultOpen="false" />

				<bean parent="Uif-DocumentRouteLogSection"
					p:disclosure.defaultOpen="false" />
				<!-- holds the dynamically generated html content to show in lightbox -->	
				<ref bean="conveyance_maintenance_view_filepopup"/>	
			</list>
		</property>
	</bean>

	<!-- defined out here so that they can be referred to by id -->
	
	<bean id="conveyance_maintenance_view_filepopup" parent="Uif-MessageField"
		p:style="display:none" />

	<bean id="conveyance_maintenance_view_typeId" parent="Uif-InputField"
		p:propertyName="typeId">
		<property name="propertyReplacers">
			<list>
				<bean parent="Uif-ConditionalBeanPropertyReplacer"
					p:propertyName="label" p:condition="true" p:replacement="" />
			</list>
		</property>
	</bean>

	<bean id="conveyance_maintenance_view_typeMsg" parent="Uif-MessageField"
		p:style="display:none" p:messageText="Selection not possible when an attachment has been selected" />

	<bean id="conveyance_maintenance_view_notes" parent="Uif-DocumentNotesSection"
		p:disclosure.defaultOpen="true">
		<property name="items">
			<list merge="true">
				<bean parent="Uif-MessageField" p:style="display:none">
					<property name="dataAttributes">
						<map>
							<!-- allows selection of all attachments in jquery -->
							<entry key="mlaw-conv-att-line-time" value="@{#line.notePostedTimestamp?.toString()}" />
							<entry key="mlaw-conv-att-line-filename" value="@{#line.attachment?.attachmentFileName}" />
						</map>
					</property>
				</bean>
			</list>
		</property>
	</bean>


	<bean id="conveyance_maintenance_view_annexes" parent="Uif-MaintenanceStackedCollectionSection">
		<property name="headerText" value="Annexes" />
		<property name="collectionObjectClass" value="org.martinlaw.bo.ConveyanceAnnex" />
		<property name="propertyName" value="annexes" />
		<property name="readOnly" value="true" />
		<property name="conditionalRefresh"
			value="!#empty(#form.document.newMaintainableObject.dataObject.typeId)" />
		<property name="items">
			<list>
				<bean parent="Uif-InputField" p:propertyName="type.name"
					p:readOnly="true" />
			</list>
		</property>
		<property name="layoutManager.summaryTitle" value="Annex" />
		<property name="layoutManager.summaryFields">
			<list>
				<value>type.name</value>
			</list>
		</property>
		<property name="subCollections">
			<list>
				<bean parent="Uif-MaintenanceStackedSubCollection-WithinSection">
					<property name="headerText" value="Attachments" />
					<property name="collectionObjectClass" value="org.martinlaw.bo.ConveyanceAttachment" />
					<property name="propertyName" value="attachments" />
					<property name="readOnly" value="false" />
					<property name="items">
						<list>
							<bean parent="Uif-HorizontalFieldGroup" p:label="Attached File">
								<!-- the select will know how to set the time stamp by looking for 
									a parent with the id given for this group (div) the searching for the select 
									with the specified data attribute -->
								<property name="dataAttributes">
									<map>
										<!-- allows setting of selected attachment identifier - timestamp -->
										<entry key="mlaw-conv-att-grp" value="true" />
									</map>
								</property>
								<property name="items">
									<list>
										<bean parent="Uif-InputField" p:propertyName="noteTimestamp">
											<!-- control repeated here so that on change script can be added 
												with references to other controls that only make sense in this context -->
											<property name="control">
												<bean parent="Uif-HiddenControl">
													<property name="dataAttributes">
														<map>
															<!-- allows setting of selected attachment identifier - timestamp -->
															<entry key="mlaw-conv-att-timestamp" value="true" />
														</map>
													</property>
												</bean>
											</property>
											<property name="propertyReplacers">
												<list>
													<bean parent="Uif-ConditionalBeanPropertyReplacer"
														p:propertyName="label" p:condition="true" p:replacement="" />
												</list>
											</property>
										</bean>

										<bean parent="Uif-MessageField" p:style="width:150px">
											<property name="propertyReplacers">
												<list>
													<bean parent="Uif-ConditionalBeanPropertyReplacer"
														p:propertyName="messageText" p:condition="#isAddLine"
														p:replacement="Click 'Add' below" />
													<bean parent="Uif-ConditionalBeanPropertyReplacer"
														p:propertyName="messageText"
														p:condition="!#isAddLine and #empty(#line.attachment?.attachmentFileName)"
														p:replacement="[None Selected]" />
													<bean parent="Uif-ConditionalBeanPropertyReplacer"
														p:propertyName="messageText"
														p:condition="!#isAddLine and !#empty(#line.attachment?.attachmentFileName)"
														p:replacement="@{#line.attachment?.attachmentFileName}" />
												</list>
											</property>
											<property name="dataAttributes">
												<map>
													<!-- allows setting of selected attachment filename -->
													<entry key="mlaw-conv-att-filename" value="true" />
												</map>
											</property>
										</bean>

										<bean parent="Uif-PrimaryActionButton" p:actionLabel="Select File">
											<property name="propertyReplacers">
												<list>
													<bean parent="Uif-ConditionalBeanPropertyReplacer"
														p:propertyName="style" p:condition="#isAddLine"
														p:replacement="display:none" />
												</list>
											</property>
											<property name="actionScript">
												<value>
													var mlawUtil = new martinlaw.Util();
													mlawUtil.selectFileAction('conveyance_maintenance_view_notes', 'mlaw-conv-att-timestamp', 
														'mlaw-conv-att-filename', 'conveyance_maintenance_view_annexes', 
														'mlaw-conv-att-lb-mk', 'conveyance_maintenance_view_filepopup', 
														'mlaw-conv-att-grp', jQuery(this), 'mlaw-conv-att-line-time', 
														'mlaw-conv-att-line-filename');
												</value>
											</property>
										</bean>
									</list>
								</property>
							</bean>
						</list>
					</property>
					<property name="layoutManager.summaryTitle" value="Attachment" />
					<!-- When an attachment is picked from the dropdown, the filename is 
						not yet available -->
					<!-- <property name="layoutManager.summaryFields"> <list> <value>attachment.attachmentFileName</value> 
						</list> </property> -->
				</bean>
			</list>
		</property>
	</bean>

</beans>