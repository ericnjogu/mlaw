<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:p="http://www.springframework.org/schema/p"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

<bean id="case_client_inquiry_view" parent="Uif-InquiryView">
    <property name="headerText" value="Case Client Inquiry"/>
    <property name="dataObjectClassName" value="org.martinlaw.bo.CourtCaseClient"/>
    <property name="Items">
      <list>
        <bean parent="Uif-Disclosure-GridSection">
          <property name="headerText" value="Client Information"/>
          <property name="items">
            <list>
              <bean parent="Uif-InputField" p:propertyName="id"/>
              <!-- hoping an inquiry link will appear here for a drill down on the principal details -->
              <bean parent="Uif-InputField" p:propertyName="principalName"/>
            </list>
          </property>
        </bean>
      </list>
    </property>
  </bean>
</beans>
