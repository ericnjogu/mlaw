<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:p="http://www.springframework.org/schema/p"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
                    http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

	<bean id="martinlaw_shared_assignment_inquiry_view" abstract="true"	parent="martinlaw_shared_enhanced_inquiry_view">
		<property name="items">
			<list merge="true">
				<bean parent="Uif-Disclosure-GridSection">
					<property name="items">
						<list>
							<bean parent="Uif-InputField" p:propertyName="matterId"/>
							<bean parent="Uif-InputField" p:propertyName="matter.name"/>
							<bean parent="Uif-InputField" p:propertyName="matter.localReference"/>
						</list>
					</property>
					<property name="headerText" value="Assignment Information" />
				</bean>
			</list>
		</property>
	</bean>

	<bean id="martinlaw_shared_assignment_inquiry_view_assignees" abstract="true" parent="martinlaw_shared_person_inquiry_section">
		<property name="headerText" value="Assignees" />
		<property name="propertyName" value="assignees" />
	</bean>
	
	<bean id="martinlaw_shared_assignment_LookupView" abstract="true"
		parent="Uif-LookupView">
		<property name="criteriaFields">
			<list>
				<bean parent="Uif-LookupCriteriaInputField" p:propertyName="matterId"/>
				<!-- not showing the label/lookup -->
				<!-- <bean parent="Uif-LookupCriteriaInputField" p:propertyName="assignees.principalName" /> -->	
			</list>
		</property>
		<property name="resultFields">
			<list>
				<bean parent="Uif-DataField" p:propertyName="matterId" />
				<bean parent="Uif-DataField" p:propertyName="matter.name" />
				<bean parent="Uif-DataField" p:propertyName="matter.localReference" />
			</list>
		</property>
	</bean>
	
	<bean id="martinlaw_shared_assignment_maintenance_view" abstract="true"
		parent="Uif-MaintenanceView">
		<property name="items">
			<list merge="true">
				<bean parent="Uif-MaintenanceGridSection">
					<property name="items">
						<list>
							<bean parent="Uif-InputField" p:propertyName="matterId">
								<property name="propertyNamesForAdditionalDisplay"
									value="matter.name" />
								<property name="validCharactersConstraint">
									<bean parent="IntegerPatternConstraint" />
								</property>
							</bean>
						</list>
					</property>
					<property name="headerText" value="Assignment Information" />
				</bean>
			</list>
		</property>
	</bean>

	<bean id="martinlaw_shared_assignment_maintenance_view_assignees" abstract="true" parent="Uif-StackedCollectionSection">
		<property name="propertyName" value="assignees" />
		<property name="items">
			<list>
				<bean parent="Uif-InputField" p:propertyName="principalName">
				</bean>
			</list>
		</property>
		<property name="layoutManager.summaryTitle" value="Assignee" />
		<property name="layoutManager.summaryFields">
			<list>
				<value>person.name</value>
			</list>
		</property>
	</bean>
</beans>