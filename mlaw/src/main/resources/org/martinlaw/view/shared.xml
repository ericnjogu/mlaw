<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:p="http://www.springframework.org/schema/p"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

	<bean id="martinlaw_shared_person_LookupView" abstract="true"
		parent="Uif-LookupView">
		<property name="criteriaFields">
			<list>
				<bean parent="Uif-LookupCriteriaInputField" p:propertyName="principalName" />
			</list>
		</property>
		<property name="resultFields">
			<list>
				<bean parent="Uif-DataField" p:propertyName="id" />
				<bean parent="Uif-DataField" p:propertyName="principalName" />
			</list>
		</property>
	</bean>

	<bean id="martinlaw_shared_person_inquiry_view" parent="Uif-InquiryView"
		abstract="true">
		<property name="Items">
			<list>
				<bean parent="Uif-Disclosure-GridSection">
					<property name="headerText" value="Details" />
					<property name="items">
						<list>
							<bean parent="Uif-InputField" p:propertyName="id" />
							<!-- hoping an inquiry link will appear here for a drill down on the 
								principal details -->
							<bean parent="Uif-InputField" p:propertyName="principalName" />
						</list>
					</property>
				</bean>
			</list>
		</property>
	</bean>

	<bean id="martinlaw_shared_client_inquiry_section" parent="Uif-Disclosure-StackedCollectionSection"
		abstract="true">
		<property name="headerText" value="Clients" />
		<property name="propertyName" value="clients" />
		<property name="items">
			<list>
				<bean parent="Uif-InputField" p:propertyName="person.principalName" />
				<bean parent="Uif-InputField" p:propertyName="person.name" />
			</list>
		</property>
		<property name="layoutManager.summaryFields">
			<list>
				<value>person.name</value>
			</list>
		</property>
		<property name="layoutManager.summaryTitle" value="Client" />
	</bean>

	<bean id="martinlaw_shared_fee_inquiry_section" parent="Uif-Disclosure-StackedCollectionSection"
		abstract="true">
		<property name="headerText" value="Fees Received" />
		<property name="propertyName" value="fees" />
		<property name="items">
			<list>
				<bean parent="Uif-InputField" p:propertyName="amount" />
				<bean parent="Uif-InputField" p:propertyName="date" />
				<bean parent="Uif-InputField" p:propertyName="description" />
			</list>
		</property>
		<property name="layoutManager.summaryFields">
			<list>
				<value>amount</value>
				<value>date</value>
			</list>
		</property>
		<property name="layoutManager.summaryTitle" value="Fee" />
	</bean>

	<bean id="martinlaw_shared_client-maintenance-section" parent="Uif-MaintenanceStackedCollectionSection"
		abstract="true">
		<property name="headerText" value="Clients" />
		<property name="propertyName" value="clients" />
		<property name="items">
			<list>
				<bean parent="Uif-InputField" p:propertyName="principalName"/>
			</list>
		</property>
		<property name="layoutManager.summaryTitle" value="Client" />
		<property name="layoutManager.summaryFields">
			<list>
				<value>principalName</value>
			</list>
		</property>
	</bean>

	<bean id="martinlaw_shared_fee-maintenance-section" parent="Uif-MaintenanceStackedCollectionSection"
		abstract="true">
		<property name="headerText" value="Fees Received" />
		<property name="propertyName" value="fees" />
		<property name="items">
			<list>
				<bean parent="Uif-InputField" p:propertyName="amount">
					<property name="validCharactersConstraint">
						<bean parent="FloatingPointPatternConstraint"
							p:allowNegative="false" />
					</property>
				</bean>
				<bean parent="Uif-InputField" p:propertyName="date" />
				<bean parent="Uif-InputField" p:propertyName="description" />
			</list>
		</property>
		<property name="layoutManager.summaryTitle" value="Fee" />
		<property name="layoutManager.summaryFields">
			<list>
				<value>amount</value>
				<value>date</value>
			</list>
		</property>
	</bean>

</beans>
