<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:p="http://www.springframework.org/schema/p"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
                    http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">
  

  <bean id="conveyance_type_maintenance_view" parent="Uif-MaintenanceView">
    <property name="headerText" value="Conveyance Type"/>
    <property name="dataObjectClassName" value="org.martinlaw.bo.ConveyanceType"/>
    <property name="items">
      <list merge="true">
        <bean parent="Uif-MaintenanceGridSection">
          <property name="items">
            <list>
              <bean parent="Uif-InputField" p:propertyName="id"  p:readOnly="true"/>
              <bean parent="Uif-InputField" p:propertyName="name"/>
              <bean parent="Uif-InputField" p:propertyName="description"/>
            </list>
          </property>
          <property name="headerText" value="Details"/>
        </bean>
        
        <bean parent="Uif-MaintenanceStackedCollectionSection">
          <property name="headerText" value="Annex Types"/>
          <property name="collectionObjectClass" value="org.martinlaw.bo.ConveyanceAnnexType"/>
          <property name="propertyName" value="annexTypes"/>
          <property name="items">
            <list>
              <bean parent="Uif-InputField" p:propertyName="name"/>
              <bean parent="Uif-InputField" p:propertyName="description"/>
            </list>
          </property>
          <property name="layoutManager.summaryTitle" value="Annex Type"/>
          <property name="layoutManager.summaryFields">
            <list>
              <value>name</value>
            </list>
          </property>
        </bean>
      </list>
    </property>
  </bean>

</beans>