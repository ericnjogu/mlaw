<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:p="http://www.springframework.org/schema/p"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
                    http://www.springframework.org/schema/beans/spring-beans.xsd">


	<bean id="opinion_work_doc_view" parent="Uif-DocumentView">
		<property name="documentClass" value="org.martinlaw.bo.opinion.Work" />
		<property name="formPostUrl" value="work?docTypeName=@{#ConfigProperties['doctype_opinion_work']}"></property>
		<property name="headerText" value="Opinion Work" />
		<property name="items">
			<list merge="true">
				<bean parent="Uif-GridSection">
					<property name="items">
						<list>
							<bean parent="martinlaw_shared_matter_id_scriptlookup" p:dictionaryObjectEntry="org.martinlaw.bo.opinion.Work">
								<property name="quickfinder.dataObjectClassName" value="org.martinlaw.bo.opinion.Opinion" />
							</bean>
						</list>
					</property>
				</bean>
			</list>
		</property>
	</bean>
</beans>