<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:p="http://www.springframework.org/schema/p"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
                    http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">


	<bean id="opinion_maintenance_view" parent="Uif-MaintenanceView">
		<property name="headerText" value="Opinion Maintenance" />
		<property name="dataObjectClassName" value="org.martinlaw.bo.opinion.Opinion" />
		<property name="items">
			<list merge="true">
				<bean parent="martinlaw_shared_matter_info_maintenance">
					<property name="items">
						<list merge="true">
							<bean parent="Uif-InputField" p:propertyName="summary" />
						</list>
					</property>
					<property name="headerText" value="Opinion Information" />
				</bean>
				
				<bean parent="martinlaw_shared_client-maintenance-section">
					<property name="collectionObjectClass" value="org.martinlaw.bo.opinion.OpinionClient" />
				</bean>
				
				<bean parent="martinlaw_shared_fee-maintenance-section">
					<property name="collectionObjectClass" value="org.martinlaw.bo.opinion.OpinionFee" />
				</bean>
			</list>
		</property>
	</bean>

</beans>