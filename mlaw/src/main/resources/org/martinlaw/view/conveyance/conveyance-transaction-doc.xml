<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:p="http://www.springframework.org/schema/p"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
                    http://www.springframework.org/schema/beans/spring-beans.xsd">


	<bean id="conveyance_transaction_doc_view" parent="Uif-DocumentView">
		<property name="documentClass" value="org.martinlaw.bo.conveyance.TransactionDoc" />
		<property name="formPostUrl"
			value="tx?docTypeName=@{#ConfigProperties['doctype_conveyance_transaction']}"></property>
		<property name="headerText" value="Conveyance Transaction" />
		<property name="items">
			<list>
				<ref local="conveyance_transaction_doc_page"/>
			</list>
		</property>
	</bean>

	<bean id="conveyance_transaction_doc_page" parent="Uif-DocumentPage">
		<property name="items">
			<list merge="true">
				<bean parent="Uif-GridSection">
					<property name="items">
						<list>
							<bean parent="martinlaw_shared_matter_id_scriptlookup_refresh"
								p:dictionaryObjectEntry="org.martinlaw.bo.conveyance.TransactionDoc">
								<property name="quickfinder.dataObjectClassName" value="org.martinlaw.bo.conveyance.Conveyance" />
							</bean>
							<bean parent="conveyance_transaction_doc_transaction_detail" p:propertyName="clientPrincipalName"
								p:conditionalRefresh="!#empty(document.matterId)"
								p:refreshWhenChangedPropertyNames="matterId">
								<!-- <property name="optionsFinder">
									<bean class="org.martinlaw.keyvalues.MatterClientNamesKeyValues" />
								</property> -->
							</bean>
							<bean parent="conveyance_transaction_doc_transaction_detail" p:propertyName="amount" />
							<bean parent="conveyance_transaction_doc_transaction_detail" p:propertyName="date" />
							<bean parent="contract_transaction_doc_transaction_detail" p:propertyName="considerationId" 
								p:conditionalRefresh="!#empty(document.matterId)"/>
							<bean parent="contract_transaction_doc_transaction_detail" p:propertyName="transactionTypeId" />
						</list>
					</property>
				</bean>
			</list>
		</property>
	</bean>
	
	<bean id="conveyance_transaction_doc_transaction_detail" parent="Uif-InputField"
		abstract="true" p:dictionaryObjectEntry="org.martinlaw.bo.conveyance.TransactionDoc" />
</beans>