<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:p="http://www.springframework.org/schema/p"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
                    http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">


	<bean id="conveyance_maintenance_view" parent="Uif-MaintenanceView">
		<property name="headerText" value="Conveyance Maintenance" />
		<property name="dataObjectClassName" value="org.martinlaw.bo.conveyance.Conveyance" />

		<property name="items">
			<list merge="true">

				<bean parent="martinlaw_shared_matter_info_maintenance">
					<property name="items">
						<list merge="true">
							<bean parent="Uif-HorizontalFieldGroup" p:label="Conveyance Type">
								<property name="items">
									<list>
										<ref bean="conveyance_maintenance_view_typeId" />
										<ref bean="conveyance_maintenance_view_typeMsg" />
									</list>
								</property>
							</bean>

							<!-- when the type changes, the annexes section should refresh to 
								reflect the annex types associated with the chosen conveyance type -->
						</list>
					</property>
					<property name="headerText" value="Conveyance Information" />
				</bean>

				<bean parent="martinlaw_shared_client-maintenance-section">
					<property name="collectionObjectClass" value="org.martinlaw.bo.conveyance.Client" />
				</bean>

			</list>
		</property>
	</bean>

	<!-- defined out here so that they can be referred to by id -->

	<bean id="conveyance_maintenance_view_typeId" parent="martinlaw_shared_blank_label_inputfield"
		p:propertyName="typeId"
		p:inquiry.enableDirectInquiry="false" p:quickfinder.render="false"/>

	<bean id="conveyance_maintenance_view_typeMsg" parent="Uif-MessageField"
		p:style="display:none" />


</beans>