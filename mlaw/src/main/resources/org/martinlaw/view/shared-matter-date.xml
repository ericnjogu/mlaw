<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:p="http://www.springframework.org/schema/p"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
                    http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">


	<bean id="martinlaw_shared_date_maintenance_view" abstract="true"
		parent="Uif-MaintenanceView">
		<property name="items">
			<list merge="true">
				<bean parent="Uif-MaintenanceGridSection">
					<property name="items">
						<list>
							<bean parent="Uif-InputField" p:propertyName="matterId">
								<property name="propertyNamesForAdditionalDisplay"
									value="matter.name" />
								<property name="validCharactersConstraint">
									<bean parent="IntegerPatternConstraint" />
								</property>
							</bean>
							<bean parent="martinlaw_shared_custom_req_msg_inputfield" p:propertyName="typeId" />
							<bean parent="martinlaw_shared_custom_req_msg_inputfield" p:propertyName="date" />
							<bean parent="Uif-InputField" p:propertyName="comment" />
						</list>
					</property>
					<property name="headerText" value="Date Information" />
				</bean>
			</list>
		</property>
		<!-- only here to ensure that the double asterix ** is displayed, since with client side validation off, view validation
		is not activated -->
		<!-- <property name="stateMapping">
      		<bean parent="WorkflowStateMapping"/>
     	</property> -->
     	<property name="validateClientSide" value="false"/>
	</bean>
	
	<bean id="martinlaw_shared_court_case_date_LookupView" abstract="true"	parent="Uif-LookupView">
		<property name="criteriaFields">
			<list>
				<bean parent="Uif-LookupCriteriaInputField" p:propertyName="matterId" />
				<bean parent="Uif-LookupCriteriaInputField" p:propertyName="typeId" />
				<bean parent="Uif-LookupCriteriaInputField" p:propertyName="date" />
				<bean parent="Uif-LookupCriteriaInputField" p:propertyName="comment" />
			</list>
		</property>
		<property name="resultFields">
			<list>
				<bean parent="Uif-DataField" p:propertyName="matterId" />
				<bean parent="Uif-DataField" p:propertyName="type.name" />
				<bean parent="Uif-DataField" p:propertyName="date" />
				<bean parent="Uif-DataField" p:propertyName="comment" />
				<!-- to be rendered as drill down, where the link will be accessible on the inquiry screen or have the calendar url being the custom inquiry url -->
				<bean parent="Uif-DataField"  p:label="Calendar Event" p:propertyName="calendarEvent"/>
			</list>
		</property>
</bean>
</beans>