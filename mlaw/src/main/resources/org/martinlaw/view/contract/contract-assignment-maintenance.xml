<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:p="http://www.springframework.org/schema/p"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
                    http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">


	<bean id="contract_assignment_maintenance_view" parent="Uif-MaintenanceView">
		<property name="headerText" value="Contract Assignment Maintenance" />
		<property name="dataObjectClassName" value="org.martinlaw.bo.contract.Assignment" />
		<property name="items">
			<list merge="true">
				<bean parent="Uif-MaintenanceGridSection">
					<property name="items">
						<list>
							<bean parent="Uif-InputField" p:propertyName="id"
								p:readOnly="true" />
							<bean parent="Uif-InputField" p:propertyName="contractId">
								<property name="propertyNamesForAdditionalDisplay"
									value="contract.name" />
								<property name="validCharactersConstraint">
									<bean parent="IntegerPatternConstraint" />
								</property>
							</bean>
						</list>
					</property>
					<property name="headerText" value="Contract Information" />
				</bean>

				<bean parent="Uif-StackedCollectionSection">
					<property name="headerText" value="Assignees" />
					<property name="collectionObjectClass"
						value="org.martinlaw.bo.contract.Assignee" />
					<property name="propertyName" value="assignees" />
					<property name="items">
						<list>
							<bean parent="Uif-InputField" p:propertyName="principalName">
							</bean>
						</list>
					</property>
					<property name="layoutManager.summaryTitle" value="Assignee" />
					<property name="layoutManager.summaryFields">
						<list>
							<value>person.name</value>
						</list>
					</property>
				</bean>
			</list>
		</property>
	</bean>

</beans>