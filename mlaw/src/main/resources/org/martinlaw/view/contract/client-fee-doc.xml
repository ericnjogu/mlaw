<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:p="http://www.springframework.org/schema/p"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
                    http://www.springframework.org/schema/beans/spring-beans.xsd">


	<bean id="contract_fee_doc_view" parent="Uif-DocumentView">
		<property name="documentClass" value="org.martinlaw.bo.contract.ClientFee" />
		<property name="formPostUrl"
			value="tx?docTypeName=@{#ConfigProperties['doctype_contract_fee']}"></property>
		<property name="headerText" value="Contract Fee" />
		<property name="items">
			<list>
			<ref local="contract_fee_doc_page"/>
			</list>
		</property>
	</bean>
	
	<bean id="contract_fee_doc_page" parent="Uif-DocumentPage">
	<property name="items">
			<list merge="true">
				<bean parent="Uif-GridSection">
					<property name="items">
						<list>
							<bean parent="martinlaw_shared_matter_id_scriptlookup_refresh"
								p:dictionaryObjectEntry="org.martinlaw.bo.contract.ClientFee">
								<property name="quickfinder.dataObjectClassName" value="org.martinlaw.bo.contract.Contract" />
							</bean>
							<bean parent="contract_fee_doc_fee_detail" p:propertyName="fee.clientPrincipalName"
								p:conditionalRefresh="!#empty(document.matterId)"
								p:refreshWhenChangedPropertyNames="matterId">
								<property name="optionsFinder">
									<bean class="org.martinlaw.keyvalues.MatterClientNamesKeyValues" />
								</property>
							</bean>
							<bean parent="contract_fee_doc_fee_detail" p:propertyName="fee.amount" />
							<bean parent="contract_fee_doc_fee_detail" p:propertyName="fee.date" />
						</list>
					</property>
				</bean>
			</list>
		</property>
	</bean>

	<bean id="contract_fee_doc_fee_detail" parent="Uif-InputField"
		abstract="true" p:dictionaryObjectEntry="org.martinlaw.bo.contract.ClientFee" />
</beans>