<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:p="http://www.springframework.org/schema/p"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

<bean id="contract_assignment_LookupView" parent="Uif-LookupView">
    <property name="headerText" value="Contract Assignment Lookup" />
    <property name="dataObjectClassName" value="org.martinlaw.bo.contract.ContractAssignment" />
    <property name="criteriaFields">
      <list>
        <bean parent="Uif-LookupCriteriaInputField" p:propertyName="id" />
        <bean parent="Uif-LookupCriteriaInputField" p:propertyName="contractId" p:inquiry.enableDirectInquiry="false"/>
      </list>
    </property>
    <property name="resultFields">
      <list>
         <bean parent="Uif-DataField" p:propertyName="id" />
        <bean parent="Uif-DataField" p:propertyName="contract.name" />
      </list>
    </property>
  </bean>
</beans>
