<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:p="http://www.springframework.org/schema/p"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
                    http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">


	<bean id="contract_inquiry_view" parent="Uif-InquiryView">
		<property name="headerText" value="Contract Inquiry" />
		<property name="dataObjectClassName" value="org.martinlaw.bo.contract.Contract" />
		<property name="formPostUrl" value="inquiryWithAtts" />
		<property name="items">
			<list merge="true">
				<bean parent="martinlaw_shared_matter_info_inquiry">
					<property name="items">
						<list merge="true">
							<bean parent="Uif-InputField" p:propertyName="type.name" />

						</list>
					</property>
					<property name="headerText" value="Contract Information" />
				</bean>
				
				<bean parent="martinlaw_shared_matter_event_stacked_collection_section">
					<property name="collectionObjectClass" value="org.martinlaw.bo.contract.Event" />
				</bean>

				<bean parent="Uif-Disclosure-GridSection">
					<property name="items">
						<list>
							<bean parent="Uif-InputField" p:propertyName="serviceOffered" />
						</list>
					</property>
					<property name="headerText" value="Service Offered" />
				</bean>

				<bean parent="Uif-Disclosure-GridSection">
					<property name="items">
						<list>
							<bean parent="Uif-InputField" p:propertyName="summaryOfTerms" />
						</list>
					</property>
					<property name="headerText" value="Summary of Terms and Conditions" />
				</bean>

				<bean parent="martinlaw_shared_consideration_inquiry_table_section">
					<property name="collectionObjectClass" value="org.martinlaw.bo.contract.Consideration" />
					<property name="subCollections">
				       <list>
				         <bean parent="martinlaw_shared_consideration_transactions_sub_collection_inquiry">
				         	 <property name="collectionObjectClass" value="org.martinlaw.bo.contract.TransactionDoc" />
				         </bean>
				       </list>
				     </property>
				</bean>

				<bean parent="Uif-Disclosure-GridSection">
					<property name="items">
						<list>
							<bean parent="Uif-InputField" p:propertyName="contractDuration.startDate" />
							<bean parent="Uif-InputField" p:propertyName="contractDuration.endDate" />
							<bean parent="Uif-InputField" p:propertyName="contractDuration.duration" />
							<bean parent="Uif-InputField" p:propertyName="contractDuration.durationTimeUnit" />
						</list>
					</property>
					<property name="headerText" value="Contract Duration" />
				</bean>

				<bean parent="Uif-Disclosure-StackedCollectionSection">
					<property name="headerText" value="Parties" />
					<property name="collectionObjectClass" value="org.martinlaw.bo.contract.ContractParty" />
					<property name="propertyName" value="parties" />
					<property name="items">
						<list>
							<bean parent="Uif-InputField" p:propertyName="principalName">
							</bean>
						</list>
					</property>
					<property name="layoutManager.summaryTitle" value="Party" />
					<property name="layoutManager.summaryFields">
						<list>
							<value>person.name</value>
						</list>
					</property>
				</bean>

				<bean parent="Uif-Disclosure-StackedCollectionSection">
					<property name="headerText" value="Signatories" />
					<property name="collectionObjectClass"
						value="org.martinlaw.bo.contract.ContractSignatory" />
					<property name="propertyName" value="signatories" />
					<property name="items">
						<list>
							<bean parent="Uif-InputField" p:propertyName="principalName">
							</bean>
						</list>
					</property>
					<property name="layoutManager.summaryTitle" value="Signatory" />
					<property name="layoutManager.summaryFields">
						<list>
							<value>person.name</value>
						</list>
					</property>
				</bean>

				<bean parent="martinlaw_shared_annexes_inquirySection" />

				<bean parent="martinlaw_shared_assignment_inquiry_view_assignees">
					<property name="collectionObjectClass" value="org.martinlaw.bo.contract.Assignee" />
				</bean>

				<bean parent="martinlaw_shared_work_inquiry_section">
					<property name="collectionObjectClass" value="org.martinlaw.bo.contract.Work" />
					<property name="items">
						<list>
							<bean parent="martinlaw_shared_work_inquiry_item_group">
								<property name="items">
									<list merge="true">
										<bean parent="martinlaw_shared_line_docnumber_linkfield">
											<property name="href">
												<value>
													@{#ConfigProperties['dochandler_contract_work']}&amp;docId=@{#line.documentNumber}&amp;command=displayDocSearchView
												</value>
											</property>
										</bean>
									</list>
								</property>
							</bean>
						</list>
					</property>
				</bean>
				
				<bean parent="martinlaw_shared_transaction_doc_inquiry_section">
					<property name="collectionObjectClass" value="org.martinlaw.bo.contract.TransactionDoc" />
					<property name="items">
						<list merge="true">
							<bean parent="martinlaw_shared_line_docnumber_linkfield" >
								<property name="href">
									<value>
										@{#ConfigProperties['dochandler_contract_fee']}&amp;docId=@{#line.documentNumber}&amp;command=displayDocSearchView
									</value>
								</property>
							</bean>
						</list>
					</property>
				</bean>
				
				<bean parent="martinlaw_shared_client_inquiry_section">
					<property name="collectionObjectClass" value="org.martinlaw.bo.contract.Client" />
				</bean>
			</list>
		</property>
	</bean>

</beans>