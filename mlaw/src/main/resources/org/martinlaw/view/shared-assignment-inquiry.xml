<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:p="http://www.springframework.org/schema/p"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
                    http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

	<bean id="martinlaw_shared_assignment_inquiry_view" abstract="true"
		parent="Uif-InquiryView">
		<property name="items">
			<list merge="true">
				<bean parent="Uif-Disclosure-GridSection">
					<property name="items">
						<list>
							<bean parent="Uif-InputField" p:propertyName="id" />
							<bean parent="Uif-InputField" p:propertyName="matterId"
								p:readOnly="true">
								<property name="propertyNamesForAdditionalDisplay"
									value="matter.name" />
							</bean>
						</list>
					</property>
					<property name="headerText" value="Assignment Information" />
				</bean>
			</list>
		</property>
	</bean>

	<bean id="martinlaw_shared_assignment_inquiry_view_assignees" abstract="true" parent="Uif-Disclosure-StackedCollectionSection">
		<property name="headerText" value="Assignees" />
		<!-- <property name="collectionObjectClass" value="org.martinlaw.bo.contract.Assignee" /> -->
		<property name="propertyName" value="assignees" />
		<property name="items">
			<list>
				<bean parent="Uif-InputField" p:propertyName="person.principalId" />
				<bean parent="Uif-InputField" p:propertyName="person.name"/>
			</list>
		</property>
		<property name="layoutManager.summaryTitle" value="Assignee" />
		<property name="layoutManager.summaryFields">
			<list>
				<value>person.name</value>
			</list>
		</property>
	</bean>
</beans>