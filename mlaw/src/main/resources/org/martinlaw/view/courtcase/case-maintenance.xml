<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:p="http://www.springframework.org/schema/p"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
                    http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">


	<bean id="case_maintenance_view" parent="matter_maintenance_view">
		<property name="headerText" value="Court Case Maintenance" />
		<property name="dataObjectClassName" value="org.martinlaw.bo.courtcase.CourtCase" />
		<property name="items">
			<list merge="true">
				<bean parent="Uif-MaintenanceGridSection">
					<property name="items">
						<list>
							<bean parent="martinlaw_shared_custom_req_msg_inputfield" p:propertyName="courtReference" 
								p:instructionalText="e.g. HCC No 27 of 2012"/>
							<bean parent="martinlaw_shared_custom_req_msg_inputfield" p:propertyName="typeId"/>
						</list>
					</property>
					<property name="headerText" value="Case Information" />
				</bean>

				<bean parent="Uif-StackedCollectionSection">
					<property name="headerText" value="Witnesses" />
					<property name="collectionObjectClass"
						value="org.martinlaw.bo.courtcase.CourtCaseWitness" />
					<property name="propertyName" value="witnesses" />
					<property name="items">
						<list>
							<bean parent="Uif-InputField" p:propertyName="principalName"/>
						</list>
					</property>
					<property name="layoutManager.summaryTitle" value="Witness" />
					<property name="layoutManager.summaryFields">
						<list>
							<value>person.name</value>
						</list>
					</property>
				</bean>
			</list>
		</property>
	</bean>

</beans>