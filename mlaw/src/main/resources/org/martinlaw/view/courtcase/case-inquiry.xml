<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:p="http://www.springframework.org/schema/p"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

	<bean id="court_case_inquiry_view" parent="Uif-InquiryView">
		<property name="headerText" value="Court Case Inquiry" />
		<property name="dataObjectClassName" value="org.martinlaw.bo.courtcase.CourtCase" />
		<property name="formPostUrl" value="inquiryWithAtts" />
		<property name="Items">
			<list>
				<bean parent="Uif-Disclosure-GridSection">
					<property name="headerText" value="Case Information" />
					<property name="layoutManager.numberOfColumns" value="2" />
					<property name="items">
						<list>
							<bean parent="Uif-InputField" p:propertyName="id" />
							<bean parent="Uif-InputField" p:propertyName="localReference" />
							<bean parent="Uif-InputField" p:propertyName="courtReference" />
							<bean parent="Uif-InputField" p:propertyName="name" />
							<bean parent="Uif-InputField" p:propertyName="statusId" />
						</list>
					</property>
				</bean>

				<bean parent="Uif-Disclosure-StackedCollectionSection">
					<property name="headerText" value="Dates" />
					<property name="collectionObjectClass" value="org.martinlaw.bo.courtcase.CourtCaseDate" />
					<property name="propertyName" value="dates" />
					<property name="items">
						<list>
							<bean parent="Uif-InputField" p:propertyName="date" />
							<bean parent="Uif-InputField" p:propertyName="comment" />
							<bean parent="Uif-LinkField" p:linkText="@{#line.calendarEvent.url}"
              p:href="@{#line.calendarEvent.url}" p:label="Calendar Event" p:render="@{!#isEmpty(#line.calendarEvent)}"/>
						</list>
					</property>
					<property name="layoutManager.summaryFields">
						<list>
							<value>date</value>
						</list>
					</property>
					<property name="layoutManager.summaryTitle" value="Date" />
				</bean>

				<bean parent="martinlaw_shared_client_inquiry_section">
					<property name="collectionObjectClass" value="org.martinlaw.bo.courtcase.CourtCaseClient" />
				</bean>

				<bean parent="Uif-Disclosure-StackedCollectionSection">
					<property name="headerText" value="Witnesses" />
					<property name="collectionObjectClass" value="org.martinlaw.bo.courtcase.CourtCaseWitness" />
					<property name="propertyName" value="witnesses" />
					<property name="items">
						<list>
							<bean parent="Uif-InputField" p:propertyName="person.principalId" />
							<bean parent="Uif-InputField" p:propertyName="person.name" />
						</list>
					</property>
					<property name="layoutManager.summaryFields">
						<list>
							<value>principalName</value>
						</list>
					</property>
					<property name="layoutManager.summaryTitle" value="Witness" />
				</bean>

				<bean parent="martinlaw_shared_fee_inquiry_section">
					<property name="collectionObjectClass" value="org.martinlaw.bo.courtcase.CourtCaseFee" />
				</bean>

				<bean parent="martinlaw_shared_annexes_inquirySection"/>
			</list>
		</property>
	</bean>
</beans>
