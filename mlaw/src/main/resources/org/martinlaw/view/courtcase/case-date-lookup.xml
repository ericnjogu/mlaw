<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:p="http://www.springframework.org/schema/p"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

<bean id="court_case_date_LookupView" parent="Uif-LookupView">
    <property name="headerText" value="Court Case Date Lookup" />
    <property name="dataObjectClassName" value="org.martinlaw.bo.courtcase.CourtCaseDate" />
    <property name="criteriaFields">
      <list>
      	<bean parent="Uif-LookupCriteriaInputField" p:propertyName="typeId" />
        <bean parent="Uif-LookupCriteriaInputField" p:propertyName="date" />
        <bean parent="Uif-LookupCriteriaInputField" p:propertyName="comment" />
      </list>
    </property>
    <property name="resultFields">
      <list>
         <bean parent="Uif-DataField" p:propertyName="courtCaseId" />
        <bean parent="Uif-DataField" p:propertyName="type.name" />
        <bean parent="Uif-DataField" p:propertyName="date" />
        <bean parent="Uif-DataField" p:propertyName="comment" />
      </list>
    </property>
  </bean>
</beans>
