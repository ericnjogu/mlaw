<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:p="http://www.springframework.org/schema/p"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

	<bean id="courtcase_LookupView" parent="martinlaw_shared_matter_LookupView">
		<property name="headerText" value="Court Case Lookup" />
		<property name="dataObjectClassName" value="org.martinlaw.bo.courtcase.CourtCase" />
		<property name="criteriaFields">
			<list merge="true">
				<bean parent="martinlaw_shared_wildcard_lookup_field" p:propertyName="courtReference"/>
				<bean parent="Uif-LookupCriteriaInputField" p:propertyName="wildcardPropertyNames" p:id="mlaw_wcp_case">
					<property name="control">
      					<bean parent="Uif-HiddenControl">
      						<property name="onDocumentReadyScript" value="jq('#mlaw_wcp_case_control').val('courtReference');"/>
      					</bean>
   					</property>
				</bean>
				<bean parent="Uif-LookupCriteriaInputField" p:propertyName="typeId"/>
			</list>
		</property>
		<property name="resultFields">
			<list merge="true">
				<bean parent="Uif-DataField" p:propertyName="courtReference" />
				<bean parent="Uif-DataField" p:propertyName="type.name" />
			</list>
		</property>
	</bean>
</beans>
