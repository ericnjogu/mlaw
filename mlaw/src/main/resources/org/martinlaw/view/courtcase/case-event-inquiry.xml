<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:p="http://www.springframework.org/schema/p"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
                    http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">
<!--  this file may not needed since all fields are displayed on the lookup results as well as in the date section of each
court case -->
	<bean id="courtcase_date_inquiry_view" parent="Uif-InquiryView">
		<property name="headerText" value="Court Case Event Inquiry" />
		<property name="dataObjectClassName" value="org.martinlaw.bo.courtcase.Event" />
		<property name="items">
			<list merge="true">
				<bean parent="Uif-Disclosure-GridSection">
					<property name="layoutManager.numberOfColumns" value="2" />
					<property name="items">
						<list>
							<bean parent="Uif-InputField" p:propertyName="matterId" />
							<bean parent="Uif-InputField" p:propertyName="type.name" />
							<bean parent="Uif-InputField" p:propertyName="startDate" />
							<bean parent="Uif-InputField" p:propertyName="endDate" />
							<bean parent="Uif-InputField" p:propertyName="location" />
							<bean parent="Uif-InputField" p:propertyName="comment" />
							<bean parent="Uif-LinkField" p:linkText="Calendar Event" p:label="Download Event">
								<property name="href">
									<value>
										@{#ConfigProperties['application.url']}/kr-krad/calendar/date/@{dataObject.eventUID}
									</value>
								</property>
							</bean>
						</list>
					</property>
				</bean>
			</list>
		</property>
	</bean>

</beans>