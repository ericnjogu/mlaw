<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:p="http://www.springframework.org/schema/p"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
                    http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">
  

  <bean id="case_status_maintenance_view" parent="Uif-MaintenanceView">
    <property name="headerText" value="Status"/>
    <property name="dataObjectClassName" value="org.martinlaw.bo.Status"/>
    <property name="items">
      <list merge="true">
        <bean parent="Uif-MaintenanceGridSection">
          <property name="items">
            <list>
              <bean parent="Uif-InputField" p:propertyName="id"  p:readOnly="true"/>
              <bean parent="Uif-InputField" p:propertyName="status"/>
              <bean parent="Uif-InputField" p:propertyName="type"/>
            </list>
          </property>
          <property name="headerText" value="Case Status"/>
        </bean>
      </list>
    </property>
  </bean>

</beans>