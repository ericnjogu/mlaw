<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:p="http://www.springframework.org/schema/p" xsi:schemaLocation="http://www.springframework.org/schema/beans         http://www.springframework.org/schema/beans/spring-beans.xsd">

  <bean id="opinion_maint_document_entry"  parent="uifMaintenanceDocumentEntry">
    <property name="dataObjectClass" value="org.martinlaw.bo.opinion.Opinion"/>
    <property name="maintainableClass" value="org.martinlaw.bo.MatterMaintainable"/>
    <property name="lockingKeys">
      <list>
        <value>localReference</value>
      </list>
    </property>
    <property name="documentTypeName" value="OpinionMaintenanceDocument"/>
    <property name="workflowAttributes">
    	<ref bean="opinion_maint_document_entry_workflow_attrs"/>
	</property>
  </bean>
  
  <bean id="opinion_maint_document_entry_workflow_attrs" parent="WorkflowAttributes">
		<property name="searchingTypeDefinitions">
			<list>
				<bean class="org.kuali.rice.krad.datadictionary.SearchingTypeDefinition">
					<property name="searchingAttribute">
						<bean parent="opinion_maint_document_entry_search_attr">
							<property name="attributeName" value="localReference" />
						</bean>
					</property>
					<property name="documentValues">
						<list>
							<value>newMaintainableObject.dataObject.localReference</value>
						</list>
					</property>
				</bean>
				<bean class="org.kuali.rice.krad.datadictionary.SearchingTypeDefinition">
					<property name="searchingAttribute">
						<bean parent="opinion_maint_document_entry_search_attr">
							<property name="attributeName" value="name" />
						</bean>
					</property>
					<property name="documentValues">
						<list>
							<value>newMaintainableObject.dataObject.name</value>
						</list>
					</property>
				</bean>
				<bean class="org.kuali.rice.krad.datadictionary.SearchingTypeDefinition">
					<property name="searchingAttribute">
						<bean parent="opinion_maint_document_entry_search_attr">
							<property name="attributeName" value="statusId" />
						</bean>
					</property>
					<property name="documentValues">
						<list>
							<value>newMaintainableObject.dataObject.statusId</value>
						</list>
					</property>
				</bean>
				<bean class="org.kuali.rice.krad.datadictionary.SearchingTypeDefinition">
					<property name="searchingAttribute">
						<bean parent="opinion_maint_document_entry_search_attr">
							<property name="attributeName" value="clientPrincipalName" />
						</bean>
					</property>
					<property name="documentValues">
						<list>
							<value>newMaintainableObject.dataObject.clientPrincipalName</value>
						</list>
					</property>
				</bean>
			</list>
		</property>
	</bean>

	<bean id="opinion_maint_document_entry_search_attr" parent="martinlaw_shared_workflow_search_attr_parent"
		abstract="true">
		<property name="businessObjectClassName" value="org.martinlaw.bo.opinion.Opinion" />
	</bean>

</beans>
