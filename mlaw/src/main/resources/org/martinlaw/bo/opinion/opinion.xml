<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:p="http://www.springframework.org/schema/p"
	xsi:schemaLocation="http://www.springframework.org/schema/beans         
http://www.springframework.org/schema/beans/spring-beans.xsd">
	<!-- Copyright 2010-2011 Protosoft Ltd -->

	<bean id="opinion_bo" parent="BusinessObjectEntry">
		<property name="businessObjectClass" value="org.martinlaw.bo.opinion.Opinion" />
		<property name="titleAttribute" value="name" />
		<property name="attributes">
			<list>
				<bean parent="martinlaw-shared-id-parentBean" p:label="Opinion Id" />
				<bean parent="martinlaw-shared-localReference-parentBean" />
				<bean parent="martinlaw-shared-name" p:label="Opinion Name" />
				<bean parent="martinlaw-shared-statusId-parentBean">
					<property name="optionsFinder">
						<bean class="org.martinlaw.keyvalues.OpinionStatusKeyValues" />
					</property>
				</bean>
				<ref bean="opinion_bo_summary"/>
			</list>
		</property>
		<property name="boNotesEnabled" value="true" />
		<property name="objectLabel" value="name" />
	</bean>
	
	<bean id="opinion_bo_summary" parent="AttributeDefinition">
    <property name="validationPattern">
      <bean parent="AnyCharacterValidationPattern"  p:allowWhitespace="true"/>
    </property>
    <property name="name" value="summary"/>
    <property name="label" value="Summary"/>
    <property name="controlField">
      <bean parent="Uif-TextAreaControl"  p:rows="5" p:cols="50" p:maxLength="255"/>
    </property>  
  </bean>
</beans>
