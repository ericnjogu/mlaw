<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:p="http://www.springframework.org/schema/p"
	xsi:schemaLocation="http://www.springframework.org/schema/beans         
http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">
	<!-- Copyright 2010-2011 Protosoft Ltd -->
	
	<bean id="conveyance-att" parent="conveyance-att-parentBean" />

	<bean id="conveyance-att-parentBean" abstract="true" parent="BusinessObjectEntry">
		<property name="businessObjectClass" value="org.martinlaw.bo.ConveyanceAttachment" />
		<property name="titleAttribute" value="attachment.attachmentFileName" />
		<property name="attributes">
			<list>
			<!-- defines only the foreign key of the rice att
			 the rest of the attributes - id (pk) and conveyance annex id should be assigned by the persistence framework-->
				<ref bean="conveyance-att-attId" />
			</list>
		</property>
		<property name="objectLabel" value="Conveyance Attachment" />
	</bean>

	<!-- Attribute Definitions -->

	<bean id="conveyance-att-attId" parent="conveyance-att-attId-parentBean" />

	<bean id="conveyance-att-attId-parentBean" abstract="true"
		parent="AttributeDefinition">
		<property name="forceUppercase" value="true" />
		<property name="shortLabel" value="Attachment" />
		<property name="maxLength" value="100" />
		<property name="validationPattern">
			<bean parent="AnyCharacterValidationPattern" p:allowWhitespace="true" />
		</property>
		<property name="summary" value="Attachment" />
		<property name="name" value="noteTimestamp" />
		<property name="label" value="Attachment" />
		<property name="description" value="Attachment" />
		<property name="required" value="false" />
		<property name="controlField">
				<bean parent="Uif-DropdownControl" />
			</property>
	</bean>


</beans>
