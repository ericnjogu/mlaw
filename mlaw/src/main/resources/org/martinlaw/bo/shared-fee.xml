  <bean id="martinlaw-shared-fee-parentBean" abstract="true" parent="BusinessObjectEntry">
    <property name="titleAttribute" value="amount"/>
    <property name="attributes">
      <list>    	
      	<ref bean="martinlaw-shared-fee-description"/>
      	<ref bean="martinlaw-shared-fee-date"/>
      	<ref bean="martinlaw-shared-fee-amount"/>
      </list>
    </property>
    <property name="objectLabel" value="Fee"/>
  </bean>

<!-- Attribute Definitions -->
 
 <bean id="martinlaw-shared-fee-description" parent="martinlaw-shared-description"/>

<bean id="martinlaw-shared-fee-amount" parent="martinlaw-shared-fee-amount-parentBean"/>

	<bean id="martinlaw-shared-fee-amount-parentBean" abstract="true" parent="AttributeDefinition">
		<property name="name" value="amount"/>
		<property name="label" value="Amount"/>
		<property name="description" value="Amount"/>
		<property name="shortLabel" value="Amount"/>
		<property name="summary" value="Amount"/>
		<property name="maxLength" value="20"/>
		<property name="required" value="true"/>
    <property name="controlField">
      <bean parent="Uif-TextControl" p:size="50" />
    </property> 
	</bean>
	
	<bean id="martinlaw-shared-fee-date" parent="martinlaw-shared-date"/>
</beans>
