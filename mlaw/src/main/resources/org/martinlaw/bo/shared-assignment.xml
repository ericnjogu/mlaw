<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:p="http://www.springframework.org/schema/p"
	xsi:schemaLocation="http://www.springframework.org/schema/beans         
http://www.springframework.org/schema/beans/spring-beans.xsd">

	<!-- Copyright 2012 Protosoft Ltd -->

	<bean id="martinlaw_shared_assignment_bo" abstract="true" parent="BusinessObjectEntry">
	<!-- matterId is now the pk -->
		<!-- <property name="attributes">
			<list>
				<bean parent="martinlaw-shared-id" p:name="matterId"/>
			</list>
		</property> -->
	</bean>

	<!-- Attribute Definitions -->

	<bean id="martinlaw_shared_assignment_bo_matterId" parent="AttributeDefinition">
		<property name="maxLength" value="20"/>
		<property name="validationPattern">
			<bean parent="NumericValidationPattern"/>
		</property>
		<property name="name" value="matterId" />
		<property name="required" value="true" />
		<property name="controlField">
			<bean parent="Uif-TextControl" p:size="20" />
		</property>
	</bean>
	
	<bean id="martinlaw_shared_assignment_bo_matter_relationship" abstract="true" parent="RelationshipDefinition">
          <property name="objectAttributeName" value="matter"/>
          <property name="primitiveAttributes">
            <list>
              <bean parent="PrimitiveAttributeDefinition" p:sourceName="matterId" p:targetName="id"/>
            </list>
          </property>
          <property name="supportAttributes">
            <list>
              <bean parent="SupportAttributeDefinition" p:identifier="true" p:sourceName="matterId" p:targetName="id"/>
            </list>
          </property>
        </bean>
</beans>
