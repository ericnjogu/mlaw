<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:p="http://www.springframework.org/schema/p" xsi:schemaLocation="http://www.springframework.org/schema/beans         http://www.springframework.org/schema/beans/spring-beans-2.0.xsd">
  
  <bean id="conveyance_consideration_maint_document_entry" parent="martinlaw_shared_consideration_maint_document_entry">
    <property name="dataObjectClass" value="org.martinlaw.bo.conveyance.Consideration"/>
     <property name="workflowAttributes">
    	<ref bean="conveyance_consideration_maint_document_entry_workflow_attrs"/>
	</property>
	<property name="documentTypeName" value="ConveyanceConsiderationMaintenanceDocument"/>
  </bean>
  
  <bean id="conveyance_consideration_maint_document_entry_workflow_attrs" parent="WorkflowAttributes">
		<property name="searchingTypeDefinitions">
		<list>
			<bean class="org.kuali.rice.krad.datadictionary.SearchingTypeDefinition">
				<property name="searchingAttribute">
					<bean parent="conveyance_consideration_maint_document_entry_search_attr">
						<property name="attributeName" value="considerationTypeId" />
					</bean>
				</property>
				<property name="documentValues">
					<list>
						<value>newMaintainableObject.dataObject.considerationTypeId</value>
					</list>
				</property>
			</bean>
			<bean class="org.kuali.rice.krad.datadictionary.SearchingTypeDefinition">
				<property name="searchingAttribute">
					<bean parent="conveyance_consideration_maint_document_entry_search_attr">
						<property name="attributeName" value="amount" />
					</bean>
				</property>
				<property name="documentValues">
					<list>
						<value>newMaintainableObject.dataObject.amount</value>
					</list>
				</property>
			</bean>
			<bean class="org.kuali.rice.krad.datadictionary.SearchingTypeDefinition">
				<property name="searchingAttribute">
					<bean parent="conveyance_consideration_maint_document_entry_search_attr">
						<property name="attributeName" value="currency" />
					</bean>
				</property>
				<property name="documentValues">
					<list>
						<value>newMaintainableObject.dataObject.currency</value>
					</list>
				</property>
			</bean>
			<bean class="org.kuali.rice.krad.datadictionary.SearchingTypeDefinition">
				<property name="searchingAttribute">
					<bean parent="conveyance_consideration_maint_document_entry_search_attr">
						<property name="attributeName" value="description" />
					</bean>
				</property>
				<property name="documentValues">
					<list>
						<value>newMaintainableObject.dataObject.description</value>
					</list>
				</property>
			</bean>
			<bean class="org.kuali.rice.krad.datadictionary.SearchingTypeDefinition">
				<property name="searchingAttribute">
					<bean parent="conveyance_consideration_maint_document_entry_search_attr">
						<property name="attributeName" value="matterId" />
					</bean>
				</property>
				<property name="documentValues">
					<list>
						<value>newMaintainableObject.dataObject.matterId</value>
					</list>
				</property>
			</bean>
			</list>
		</property>
	</bean>
	
	<bean id="conveyance_consideration_maint_document_entry_search_attr" parent="martinlaw_shared_workflow_search_attr_parent"
		abstract="true">
		<property name="businessObjectClassName" value="org.martinlaw.bo.conveyance.Consideration" />
	</bean>

</beans>
