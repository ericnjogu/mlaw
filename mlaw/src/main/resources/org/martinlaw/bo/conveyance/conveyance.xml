<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:p="http://www.springframework.org/schema/p"
	xsi:schemaLocation="http://www.springframework.org/schema/beans         
http://www.springframework.org/schema/beans/spring-beans.xsd">
	<!-- Copyright 2010-2011 Protosoft Ltd -->
	
	<bean id="conveyance" parent="conveyance-parentBean" />

	<bean id="conveyance-parentBean" abstract="true" parent="BusinessObjectEntry">
		<property name="businessObjectClass" value="org.martinlaw.bo.conveyance.Conveyance" />
		<property name="titleAttribute" value="name" />
		<property name="attributes">
			<list>
				<bean parent="martinlaw-shared-id-parentBean" p:label="Conveyance Id" />
				<bean parent="martinlaw_shared_matter_name" p:label="Conveyance Name"/>
				<bean parent="conveyance-statusId-parentBean" />
				<bean parent="martinlaw-shared-localReference-parentBean" />
				<ref bean="conveyance-type-id" />
			</list>
		</property>
		<property name="boNotesEnabled" value="true" />
		<property name="objectLabel" value="name" />
	</bean>

	<!-- Attribute Definitions -->

	<bean id="conveyance-statusId-parentBean" parent="martinlaw-shared-statusId-parentBean">	
		<property name="optionsFinder">
			<bean class="org.martinlaw.keyvalues.ConveyanceStatusKeyValues" />
		</property>
		<!-- required for display in custom document search -->
		<property name="control">
			<bean parent="SelectControlDefinition" p:size="20" p:valuesFinderClass="org.martinlaw.keyvalues.ConveyanceStatusKeyValues"/>
		</property>
	</bean>
	
	<bean id="conveyance-type-id"	parent="AttributeDefinition">
		<property name="forceUppercase" value="true" />
		<property name="shortLabel" value="Conveyance Type" />
		<property name="maxLength" value="100" />
		<property name="validationPattern">
			<bean parent="NumericValidationPattern" />
		</property>
		<property name="summary" value="Conveyance Type" />
		<property name="name" value="typeId" />
		<!-- label shown by the field group on maintenance screen-->
		<property name="label" value="Conveyance Type" />
		<property name="description" value="Conveyance Type" />
		<property name="required" value="true" />
		<property name="optionsFinder">
			<bean
				class="org.kuali.rice.krad.keyvalues.PersistableBusinessObjectValuesFinder"
				p:businessObjectClass="org.martinlaw.bo.conveyance.ConveyanceType"
				p:keyAttributeName="id"	p:labelAttributeName="name" p:includeBlankRow="true"/>
		</property>
		<property name="controlField">
				<bean parent="Uif-DropdownControl" />
		</property>
		<!-- required for display in kns custom document search -->
		<property name="control">
			<bean parent="SelectControlDefinition" p:size="20" p:valuesFinderClass="org.kuali.rice.krad.keyvalues.PersistableBusinessObjectValuesFinder"
				p:businessObjectClass="org.martinlaw.bo.conveyance.ConveyanceType"
				p:keyAttribute="id"	p:labelAttribute="name" p:includeBlankRow="true" p:includeKeyInLabel="false"/>
		</property>
	</bean>

</beans>
