  <bean id="conveyance-client" parent="conveyance-client-parentBean"/>

  <bean id="conveyance-client-parentBean" abstract="true" parent="martinlaw_shared_person_parentBean">
    <property name="businessObjectClass" value="org.martinlaw.bo.conveyance.ConveyanceClient"/>
    <property name="titleAttribute" value="principalName"/>
    <property name="attributes">
      <list>
      <!-- The matter id is not listed here as it is populated by ojb
       -->
        <ref bean="conveyance-client-principal-name"/>
      </list>
    </property>
    <property name="objectLabel" value="Client"/>

  </bean>

<!-- Attribute Definitions -->
 
 <bean id="conveyance-client-principal-name" parent="martinlaw-shared-principal-name" p:label="Client Name"/>

</beans>
