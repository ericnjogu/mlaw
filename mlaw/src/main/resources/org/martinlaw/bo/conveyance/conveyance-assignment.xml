<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:p="http://www.springframework.org/schema/p"
	xsi:schemaLocation="http://www.springframework.org/schema/beans         
http://www.springframework.org/schema/beans/spring-beans.xsd">

	<!-- Copyright 2012 Protosoft Ltd -->

	<bean id="conveyance_assignment_bo" parent="martinlaw_shared_assignment_bo" p:jstlKey="conveyance_assignment">
		<property name="businessObjectClass" value="org.martinlaw.bo.conveyance.Assignment" />
		<property name="attributes">
			<list merge="true">
				<bean parent="martinlaw_shared_matterId_attr" p:label="Conveyance"/>
				<!-- placed here for the sake of the (KNS) document search, but not used anywhere else -->
				<bean parent="martinlaw-shared-name" p:label="Court Case Name" p:name="matter.name"/>
				<bean parent="martinlaw-shared-localReference-parentBean" p:name="matter.localReference"/>
				<!-- end KNS custom search attrs -->
			</list>
		</property>
		<property name="objectLabel" value="Conveyance Assignment" />
		<property name="relationships">
      <list>
		<bean parent="martinlaw_shared_matter_relationship" p:targetClass="org.martinlaw.bo.conveyance.Conveyance"/>
      </list>
    </property>
	</bean>
</beans>
