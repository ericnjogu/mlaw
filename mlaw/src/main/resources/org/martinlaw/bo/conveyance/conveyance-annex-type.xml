<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:p="http://www.springframework.org/schema/p"
	xsi:schemaLocation="http://www.springframework.org/schema/beans         
http://www.springframework.org/schema/beans/spring-beans.xsd">

	<bean id="conveyance_annex_type" parent="BusinessObjectEntry">
		<property name="businessObjectClass" value="org.martinlaw.bo.conveyance.ConveyanceAnnexType" />
		<property name="titleAttribute" value="name" />
		<property name="attributes">
			<list>
				<bean parent="martinlaw-shared-description" />
				<bean parent="martinlaw-shared-name" p:label="Document" />
				<bean parent="martinlaw-shared-id" />
				
				<bean parent="AttributeDefinition">
					<property name="maxLength" value="10" />
					<property name="validationPattern">
						<bean parent="NumericValidationPattern" />
					</property>
					<property name="name" value="sequence" />
					<property name="label" value="Sequence (Order)" />
					<property name="description" value="sequence" />
					<property name="controlField">
						<bean parent="Uif-TextControl" p:size="5" />
					</property>
				</bean>
			</list>
		</property>
		<property name="objectLabel" value="Conveyance Annex Type" />
	</bean>

</beans>
