<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:p="http://www.springframework.org/schema/p"
	xsi:schemaLocation="http://www.springframework.org/schema/beans         
http://www.springframework.org/schema/beans/spring-beans-2.0.xsd">

	<bean id="martinlaw_shared_transaction_bo" abstract="true" parent="BusinessObjectEntry">
		<property name="titleAttribute" value="amount" />
		<property name="attributes">
			<list>
				<ref bean="martinlaw_shared_matterId_attr"/>
				<ref bean="martinlaw_shared_transaction_consideration_id"/>
				<bean parent="martinlaw-shared-date" />
				<bean parent="martinlaw_shared_transaction_amount" />
				<bean parent="martinlaw_shared_transaction_clientPrincipalName" />
			</list>
		</property>
		<property name="objectLabel" value="Transaction" />
	</bean>

	<!-- Attribute Definitions -->
	
	<bean id="martinlaw_shared_transaction_consideration_id" parent="AttributeDefinition">
		<property name="name" value="considerationId" />
		<property name="label" value="Consideration" />
		<property name="maxLength" value="20" />
		<property name="required" value="true" />
		<property name="controlField">
			<bean parent="Uif-DropdownControl" />
		</property>
		<property name="control">
			<bean parent="SelectControlDefinition" p:size="50" 
			p:valuesFinderClass="org.martinlaw.keyvalues.MatterConsiderationKeyValues"/>
		</property>
	</bean>

	<bean id="martinlaw_shared_transaction_amount" abstract="true" parent="AttributeDefinition">
		<property name="name" value="amount" />
		<property name="label" value="Amount" />
		<property name="description" value="Amount" />
		<property name="shortLabel" value="Amount" />
		<property name="summary" value="Amount" />
		<property name="maxLength" value="20" />
		<property name="required" value="true" />
		<property name="controlField">
			<bean parent="Uif-TextControl" p:size="20" />
		</property>
		<property name="control">
			<bean parent="TextControlDefinition" p:size="20" />
		</property>
	</bean>

	<bean id="martinlaw_shared_transaction_clientPrincipalName" abstract="true" parent="AttributeDefinition">
		<property name="name" value="clientPrincipalName" />
		<property name="label" value="Client" />
		<property name="maxLength" value="100" />
		<property name="required" value="true" />
		<property name="controlField">
			<bean parent="Uif-DropdownControl" />
		</property>
	</bean>
	
	<bean id="martinlaw_shared_matter_transaction_doc_entry" abstract="true" parent="uifTransactionalDocumentEntry">
		<property name="businessRulesClass" value="org.martinlaw.bo.MatterTxBusinessRulesBase"/>
		<property name="attributes">
			<list>
				<bean parent="martinlaw-shared-date" p:name="transaction.matterId"/>
				<bean parent="martinlaw-shared-date" p:name="transaction.considerationId"/>
				<bean parent="martinlaw-shared-date" p:name="transaction.date"/>
				<bean parent="martinlaw_shared_transaction_amount" p:name="transaction.amount"/>
				<bean parent="martinlaw_shared_transaction_clientPrincipalName" p:name="transaction.clientPrincipalName" />
			</list>
		</property>
  </bean> 
 
</beans>
