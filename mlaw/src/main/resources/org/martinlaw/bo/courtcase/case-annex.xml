	<bean id="court-case-annex" parent="court-case-annex-parentBean" />

	<bean id="court-case-annex-parentBean" abstract="true"
		parent="BusinessObjectEntry">
		<property name="businessObjectClass" value="org.martinlaw.bo.CaseAnnex" />
		<property name="inquiryDefinition">
			<ref bean="court-case-annex-inquiryDefinition" />
		</property>
		<property name="lookupDefinition">
			<ref bean="court-case-annex-lookupDefinition" />
		</property>
		<property name="titleAttribute" value="annex.annexDocumentNumber" />
		<property name="attributes">
			<list>
				<!-- expose only document number as a maintenable field on court case. 
					the rest are for lookup/inquiry -->
				<ref bean="court-case-annex-id"/>
				<ref bean="court-case-annex-annexId" />
				<ref bean="court-case-annex-document-description" />
				<ref bean="court-case-annex-explanation" />
				<ref bean="court-case-annex-document-number" />
			</list>
		</property>
		<property name="objectLabel" value="Court Case Annex" />
		
		<property name="relationships">
      <list>
		<bean parent="RelationshipDefinition">
          <property name="objectAttributeName" value="annex"/>

          <property name="targetClass" value="org.martinlaw.bo.Annex" />
          <property name="primitiveAttributes">
            <list>
              <bean parent="PrimitiveAttributeDefinition" p:sourceName="annexId" p:targetName="id"/>
            </list>
          </property>
          <!-- <property name="supportAttributes">
            <list>
              <bean parent="SupportAttributeDefinition" p:identifier="true" p:sourceName="annex.annexDocumentNumber" p:targetName="documentNumber"/>
            </list>
          </property> -->
        </bean>
         
      </list>
    </property>
		
	</bean>

	<!-- Attribute Definitions -->
	<bean id="court-case-annex-id" parent="martinlaw-shared-id"/>
	
	<bean id="court-case-annex-annexId" parent="annex-bo-id">
		<property name="name" value="annexId" />
	</bean>
	
	
	<bean id="court-case-annex-document-number" parent="annex-doc-number">
		<property name="name" value="annex.annexDocument.documentNumber" />
	</bean>
 

	<bean id="court-case-annex-document-description" parent="annex-doc-description">
		<property name="name" value="annex.annexDocument.documentHeader.documentDescription" />
	</bean>

	<bean id="court-case-annex-explanation" parent="annex-doc-explanation">
		<property name="name" value="annex.annexDocument.documentHeader.explanation" />
	</bean>
	<!-- Business Object Inquiry Definition -->


	<bean id="court-case-annex-inquiryDefinition" parent="court-case-annex-inquiryDefinition-parentBean" />

	<bean id="court-case-annex-inquiryDefinition-parentBean" abstract="true"
		parent="InquiryDefinition">
		<property name="inquirySections">
			<list>
				<bean parent="InquirySectionDefinition">
					<property name="numberOfColumns" value="3" />
					<property name="inquiryFields">
						<list>
							<bean parent="FieldDefinition" p:attributeName="id"/>
							<bean parent="FieldDefinition" p:attributeName="annex.annexDocumentNumber" />
							<bean parent="FieldDefinition" p:attributeName="annex.annexDocument.documentHeader.documentDescription" />
							<bean parent="FieldDefinition" p:attributeName="annex.annexDocument.documentHeader.explanation" />
						</list>
					</property>
					<property name="title" value="Details" />
				</bean>
			</list>
		</property>
		<property name="title" value="Court Case Annex Inquiry" />
	</bean>

	<!-- Business Object Lookup Definition -->


	<bean id="court-case-annex-lookupDefinition" parent="court-case-annex-lookupDefinition-parentBean" />

	<bean id="court-case-annex-lookupDefinition-parentBean" abstract="true"
		parent="LookupDefinition">

		<property name="defaultSort">
			<bean parent="SortDefinition">
			</bean>
		</property>
		<property name="lookupFields">
			<list>
				<bean parent="FieldDefinition" p:attributeName="annex.annexDocumentNumber" />
				<bean parent="FieldDefinition" p:attributeName="annex.annexDocument.documentHeader.documentDescription" />
				<bean parent="FieldDefinition" p:attributeName="annex.annexDocument.documentHeader.explanation" />
			</list>
		</property>
		<property name="resultFields">
			<list>
				<bean parent="FieldDefinition" p:attributeName="annex.annexDocumentNumber" />
				<bean parent="FieldDefinition" p:attributeName="annex.annexDocument.documentHeader.documentDescription" />
				<bean parent="FieldDefinition" p:attributeName="annex.annexDocument.documentHeader.explanation" />
			</list>
		</property>
		<property name="title" value="Court Case Annex Lookup" />
	</bean>
</beans>
