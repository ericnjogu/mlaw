  <bean id="case-witness" parent="case-witness-parentBean"/>

  <bean id="case-witness-parentBean" abstract="true" parent="martinlaw_shared_person_parentBean">
    <property name="businessObjectClass" value="org.martinlaw.bo.courtcase.CourtCaseWitness"/>
    <property name="titleAttribute" value="principalName"/>
    <property name="attributes">
      <list>
      	<ref bean="case-witness-id"/>
        <ref bean="case-witness-principal-name"/>
      </list>
    </property>
    <property name="objectLabel" value="Witness"/>

  </bean>

<!-- Attribute Definitions -->
 
 <bean id="case-witness-id" parent="martinlaw-shared-id"/>
 
 <bean id="case-witness-principal-name" parent="case-witness-principal-name-parentBean"/>

  <bean id="case-witness-principal-name-parentBean" abstract="true" parent="AttributeDefinition">
    <property name="forceUppercase" value="false"/>
    <property name="shortLabel" value="name"/>
    <property name="maxLength" value="30"/>
    <property name="validationPattern">
      <bean parent="AnyCharacterValidationPattern"/>
    </property>
    <property name="control">
      <bean parent="TextControlDefinition" p:size="30"/>
    </property>
    <property name="required" value="true"/>
    <property name="summary" value="Witness Name"/>
    <property name="name" value="principalName"/>
    <property name="label" value="Witness Name"/>
    <property name="description" value="Witness Name"/>
    <property name="controlField">
      <bean parent="Uif-KimPersonControl" p:personNamePropertyName="person.name" p:principalIdPropertyName="person.principalId"/>
    </property>
  </bean>
</beans>
