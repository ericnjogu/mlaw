<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:p="http://www.springframework.org/schema/p"
	xsi:schemaLocation="http://www.springframework.org/schema/beans         
http://www.springframework.org/schema/beans/spring-beans.xsd">
	
	
	<bean id="court_case_bo" parent="martinlaw_shared_matter_bo_entry">
		<property name="businessObjectClass" value="org.martinlaw.bo.courtcase.CourtCase" />
		<property name="titleAttribute" value="localReference" />
		<property name="attributes">
			<list merge="true">
				<bean parent="martinlaw-shared-id-parentBean" p:label="Court Case Id" />
				<bean parent="martinlaw_shared_matter_name" p:label="Parties"/>
				<ref bean="courtcase-statusId" />
				<bean parent="case-courtReference-parentBean" />
				<ref bean="court_case_type_id"/>
			</list>
		</property>
		<property name="collections">
	      <list>
	        <bean parent="CollectionDefinition" p:name="clients" p:label="clients" p:shortLabel="clients" p:elementLabel="client"
	        	p:dataObjectClass="org.martinlaw.bo.courtcase.Client"/>
	        <bean parent="CollectionDefinition" p:name="witnesses" p:label="witnesses" p:shortLabel="witnesses" p:elementLabel="witness"
	        	p:dataObjectClass="org.martinlaw.bo.courtcase.CourtCaseWitness"/>
	        <bean parent="CollectionDefinition" p:name="assignees" p:label="assignees" p:shortLabel="assignees" p:elementLabel="assignee"
	        	p:dataObjectClass="org.martinlaw.bo.courtcase.Assignee"/>
	      </list>
      	</property>
      	<property name="objectLabel" value="Court Case" />
	</bean>

	<!-- Attribute Definitions -->

	<bean id="case-courtReference-parentBean" abstract="true"
		parent="AttributeDefinition">
		<property name="forceUppercase" value="false" />
		<property name="shortLabel" value="Case Number" />
		<property name="maxLength" value="200" />
		<property name="validationPattern">
			<bean parent="AnyCharacterValidationPattern" /> <!-- p:allowWhitespace="true"/> -->
		</property>
		<property name="control">
			<bean parent="TextControlDefinition" p:size="60" />
		</property>
		<property name="summary" value="Court Case Number" />
		<property name="name" value="courtReference" />
		<property name="label" value="Court Case Number" />
		<property name="description" value="Court Case Number" />
		<property name="controlField">
			<bean parent="Uif-TextControl" p:size="60" />
		</property>
	</bean>

	<bean id="courtcase-statusId" parent="martinlaw-shared-statusId-parentBean">	
		<property name="optionsFinder">
			<bean class="org.martinlaw.keyvalues.CourtCaseStatusKeyValues" />
		</property>
		<!-- required for display in custom document search -->
		<property name="control">
			<bean parent="SelectControlDefinition" p:size="20" p:valuesFinderClass="org.martinlaw.keyvalues.CourtCaseStatusKeyValues"/>
		</property>

	</bean>
	
	<bean id="court_case_type_id" parent="AttributeDefinition">
		<property name="maxLength" value="20" />
		<property name="validationPattern">
			<bean parent="NumericValidationPattern" />
		</property>
		<property name="name" value="typeId" />
		<!-- label shown by the field group on maintenance screen-->
		<property name="label" value="Court Case Type" />
		<property name="required" value="true" />
		<property name="optionsFinder">
			<bean
				class="org.kuali.rice.krad.keyvalues.PersistableBusinessObjectValuesFinder"
				p:businessObjectClass="org.martinlaw.bo.courtcase.CourtCaseType"
				p:keyAttributeName="id"	p:labelAttributeName="name" p:includeBlankRow="true"/>
		</property>
		<property name="controlField">
				<bean parent="Uif-DropdownControl" />
		</property>
		<!-- required for display in kns custom document search -->
		<property name="control">
			<bean parent="SelectControlDefinition" p:size="20" p:valuesFinderClass="org.kuali.rice.krad.keyvalues.PersistableBusinessObjectValuesFinder"
				p:businessObjectClass="org.martinlaw.bo.courtcase.CourtCaseType"
				p:keyAttribute="id"	p:labelAttribute="name" p:includeBlankRow="true" p:includeKeyInLabel="false"/>
		</property>
	</bean>
</beans>
