<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:p="http://www.springframework.org/schema/p"
	xsi:schemaLocation="http://www.springframework.org/schema/beans         
http://www.springframework.org/schema/beans/spring-beans.xsd">
	<!-- Copyright 2010-2011 Protosoft Ltd -->
	
	<bean id="court_case_bo" parent="BusinessObjectEntry">
		<property name="businessObjectClass" value="org.martinlaw.bo.courtcase.CourtCase" />
		<property name="titleAttribute" value="name" />
		<property name="attributes">
			<list>
				<bean parent="martinlaw-shared-id-parentBean" p:label="Court Case Id" />
				<bean parent="martinlaw-shared-name" p:label="Court Case Name"/>
				<ref bean="courtcase-statusId" />
				<bean parent="martinlaw-shared-localReference-parentBean" />
				<bean parent="case-courtReference-parentBean" />
				<!-- client consideration -->
				<!-- added label to amount for the sake of document search, which uses it -->
				<bean parent="martinlaw_shared_consideration_bo_amount" p:name="consideration.amount" p:label="Consideration Amount"/>
				<bean parent="martinlaw_shared_consideration_bo_currency" p:name="consideration.currency"/>
				<bean parent="martinlaw_shared_consideration_bo_description" p:name="consideration.description"/>
			</list>
		</property>
		<property name="boNotesEnabled" value="true" />
		<property name="objectLabel" value="name" />
		<property name="collections">
	      <list>
	        <bean parent="CollectionDefinition" p:name="clients" p:label="clients" p:shortLabel="clients" p:elementLabel="client"
	        	p:dataObjectClass="org.martinlaw.bo.courtcase.Client"/>
	        <bean parent="CollectionDefinition" p:name="witnesses" p:label="witnesses" p:shortLabel="witnesses" p:elementLabel="witness"
	        	p:dataObjectClass="org.martinlaw.bo.courtcase.CourtCaseWitness"/>
	      </list>
      	</property>
	</bean>

	<!-- Attribute Definitions -->

	<bean id="case-courtReference-parentBean" abstract="true"
		parent="AttributeDefinition">
		<property name="forceUppercase" value="false" />
		<property name="shortLabel" value="Case Number" />
		<property name="maxLength" value="20" />
		<property name="validationPattern">
			<bean parent="AnyCharacterValidationPattern" /> <!-- p:allowWhitespace="true"/> -->
		</property>
		<property name="control">
			<bean parent="TextControlDefinition" p:size="20" />
		</property>
		<property name="summary" value="Court Case Number" />
		<property name="name" value="courtReference" />
		<property name="label" value="Court Case Number" />
		<property name="description" value="Court Case Number" />
		<property name="controlField">
			<bean parent="Uif-TextControl" p:size="20" />
		</property>
	</bean>

	<bean id="courtcase-statusId" parent="martinlaw-shared-statusId-parentBean">	
		<property name="optionsFinder">
			<bean class="org.martinlaw.keyvalues.CourtCaseStatusKeyValues" />
		</property>
		<!-- required for display in custom document search -->
		<property name="control">
			<bean parent="SelectControlDefinition" p:size="20" p:valuesFinderClass="org.martinlaw.keyvalues.CourtCaseStatusKeyValues"/>
		</property>

	</bean>

</beans>
