<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:p="http://www.springframework.org/schema/p" xsi:schemaLocation="http://www.springframework.org/schema/beans         http://www.springframework.org/schema/beans/spring-beans-2.0.xsd">

  <bean id="case_event_maint_document_entry" parent="uifMaintenanceDocumentEntry">
    <property name="dataObjectClass" value="org.martinlaw.bo.courtcase.Event"/>
    <property name="maintainableClass" value="org.martinlaw.bo.MatterEventMaintainable"/>
    <property name="businessRulesClass" value="org.martinlaw.bo.MatterMaintenanceHelperBusinessRulesBase"/>
    <!-- does this cause only one maint document to be enroute at a time - Yes subject to a unique combination of the keys below -->
    <property name="lockingKeys">
      <list>
      	<value>matterId</value>
      </list>
    </property>

    <property name="documentTypeName" value="CourtCaseEventMaintenanceDocument"/>
    <property name="workflowAttributes">
    	<ref bean="case_event_maint_document_entry_workflow_attrs"/>
	</property>
  </bean> 
  
  <bean id="case_event_maint_document_entry_workflow_attrs" parent="WorkflowAttributes">
		<property name="searchingTypeDefinitions">
		<list>
			<bean class="org.kuali.rice.krad.datadictionary.SearchingTypeDefinition">
				<property name="searchingAttribute">
					<bean parent="case_event_maint_document_entry_search_attr">
						<property name="attributeName" value="startDate" />
					</bean>
				</property>
				<property name="documentValues">
					<list>
						<value>newMaintainableObject.dataObject.startDate</value>
					</list>
				</property>
			</bean>
			<bean class="org.kuali.rice.krad.datadictionary.SearchingTypeDefinition">
				<property name="searchingAttribute">
					<bean parent="case_event_maint_document_entry_search_attr">
						<property name="attributeName" value="endDate" />
					</bean>
				</property>
				<property name="documentValues">
					<list>
						<value>newMaintainableObject.dataObject.endDate</value>
					</list>
				</property>
			</bean>
			<bean class="org.kuali.rice.krad.datadictionary.SearchingTypeDefinition">
				<property name="searchingAttribute">
					<bean parent="case_event_maint_document_entry_search_attr">
						<property name="attributeName" value="location" />
					</bean>
				</property>
				<property name="documentValues">
					<list>
						<value>newMaintainableObject.dataObject.location</value>
					</list>
				</property>
			</bean>
			<bean class="org.kuali.rice.krad.datadictionary.SearchingTypeDefinition">
				<property name="searchingAttribute">
					<bean parent="case_event_maint_document_entry_search_attr">
						<property name="attributeName" value="typeId" />
					</bean>
				</property>
				<property name="documentValues">
					<list>
						<value>newMaintainableObject.dataObject.typeId</value>
					</list>
				</property>
			</bean>
			<bean class="org.kuali.rice.krad.datadictionary.SearchingTypeDefinition">
				<property name="searchingAttribute">
					<bean parent="case_event_maint_document_entry_search_attr">
						<property name="attributeName" value="comment" />
					</bean>
				</property>
				<property name="documentValues">
					<list>
						<value>newMaintainableObject.dataObject.comment</value>
					</list>
				</property>
			</bean>
			</list>
		</property>
	</bean>

	<bean id="case_event_maint_document_entry_search_attr" parent="martinlaw_shared_workflow_search_attr_parent"
		abstract="true">
		<property name="businessObjectClassName" value="org.martinlaw.bo.courtcase.Event" />
	</bean>
</beans>
