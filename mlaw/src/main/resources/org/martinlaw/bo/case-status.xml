  <bean id="case-status" parent="case-status-parentBean"/>

  <bean id="case-status-parentBean" abstract="true" parent="BusinessObjectEntry">
    <property name="businessObjectClass" value="org.martinlaw.bo.CourtCaseStatus"/>
    <property name="inquiryDefinition">
      <ref bean="case-status-inquiryDefinition"/>
    </property>
    <property name="lookupDefinition">
      <ref bean="case-status-lookupDefinition"/>
    </property>
    <property name="titleAttribute" value="status"/>
    <property name="attributes">
      <list>
      	<ref bean="case-status-id"/>
        <ref bean="case-status-text"/>
      </list>
    </property>
    <property name="objectLabel" value="Case Status"/>
  </bean>

<!-- Attribute Definitions -->
 <!-- enabled to avoid error stacktraces about missing id attribute on inquiry action -->
 <bean id="case-status-id" parent="martinlaw-shared-id"/>
 
  <bean id="case-status-text" parent="case-status-text-parentBean"/>

  <bean id="case-status-text-parentBean" abstract="true" parent="AttributeDefinition">
    <property name="forceUppercase" value="true"/>
    <property name="shortLabel" value="Status"/>
    <property name="maxLength" value="100"/>
    <property name="validationPattern">
      <bean parent="AnyCharacterValidationPattern" p:allowWhitespace="true"/>
    </property>
    <property name="required" value="true"/>
    <property name="control">
      <bean parent="TextControlDefinition" p:size="100"/>
    </property>
    <property name="summary" value="Status"/>
    <property name="name" value="status"/>
    <property name="label" value="Status"/>
    <property name="description" value="Status"/>
    <property name="controlField">
      <bean parent="Uif-TextControl" p:size="100" p:readOnly="true"/>
    </property>
  </bean>
  

<!-- Business Object Inquiry Definition -->


  <bean id="case-status-inquiryDefinition" parent="case-status-inquiryDefinition-parentBean"/>

  <bean id="case-status-inquiryDefinition-parentBean" abstract="true" parent="InquiryDefinition">
    <property name="inquirySections">
      <list>
        <bean parent="InquirySectionDefinition">
          <property name="numberOfColumns" value="1"/>
          <property name="inquiryFields">
            <list>
            <!-- 
            <bean parent="FieldDefinition" p:attributeName="id"/>
             -->
              <bean parent="FieldDefinition" p:attributeName="status"/>
            </list>
          </property>
          <property name="title" value="Case Status"/>
        </bean>
      </list>
    </property>
    <property name="title" value="Case Status Inquiry"/>
  </bean>

<!-- Business Object Lookup Definition -->


  <bean id="case-status-lookupDefinition" parent="case-status-lookupDefinition-parentBean"/>

  <bean id="case-status-lookupDefinition-parentBean" abstract="true" parent="LookupDefinition">
    
    <property name="defaultSort">
      <bean parent="SortDefinition">
      </bean>
    </property>
    <property name="lookupFields">
      <list>
        <!-- <bean parent="FieldDefinition" p:attributeName="id"/>  -->
        <bean parent="FieldDefinition" p:attributeName="status"/>
      </list>
    </property>
    <property name="resultFields">
      <list>
        <!-- <bean parent="FieldDefinition" p:attributeName="id"/> -->
        <bean parent="FieldDefinition" p:attributeName="status"/>
      </list>
    </property>
    <property name="title" value="Case Status Lookup"/>
  </bean>
</beans>
