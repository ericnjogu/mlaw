<beans xmlns="http://www.springframework.org/schema/beans" 
xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
xmlns:p="http://www.springframework.org/schema/p" 
xsi:schemaLocation="http://www.springframework.org/schema/beans         
http://www.springframework.org/schema/beans/spring-beans.xsd">
<!--
 Copyright 2012 Protosoft Ltd
-->

  <bean id="martinlaw_shared_date_bo" abstract="true"
	parent="BusinessObjectEntry">
	<property name="titleAttribute" value="date" />
	<property name="attributes">
		<list>
			<bean parent="martinlaw_shared_matterId_attr" p:label="Court Case"
				p:required="false" />
			<ref bean="martinlaw_shared_date_bo_comment" />
			<ref bean="martinlaw_shared_date_bo_type" />
      	<!-- setting required to false to override the parent setting, then reintroducing 
				it via the simple constraint -->
			<bean parent="martinlaw-shared-date" p:required="false">
				<property name="simpleConstraint">
					<bean parent="SimpleConstraint" p:required="true" p:states="R" />
				</property>
			</bean>
		</list>
	</property>
	<property name="objectLabel" value="Date" />
</bean>

<!-- Attribute Definitions -->

<bean id="martinlaw_shared_date_bo_constrained_attr" parent="AttributeDefinition">
    <property name="simpleConstraint">
		<bean parent="SimpleConstraint" p:required="true" p:states="R"/>
	</property>
  </bean>
 
 <bean id="martinlaw_shared_date_bo_comment" parent="AttributeDefinition">
    <property name="forceUppercase" value="false"/>
    <property name="shortLabel" value="Comment"/>
    <property name="maxLength" value="150"/>
    <property name="control">
      <bean parent="TextareaControlDefinition" p:rows="5" p:cols="30"/>
    </property>
    <property name="summary" value="Comment"/>
    <property name="name" value="comment"/>
    <property name="label" value="Comment"/>
    <property name="description" value="Comment"/>
    <property name="controlField">
      <bean parent="Uif-TextAreaControl"  p:rows="5" p:cols="30" p:maxLength="150"/>
    </property>
  </bean>
  
  <bean id="martinlaw_shared_date_bo_type"	parent="martinlaw_shared_date_bo_constrained_attr">
		<property name="forceUppercase" value="true" />
		<property name="shortLabel" value="Date Type" />
		<property name="maxLength" value="100" />
		<property name="validationPattern">
			<bean parent="NumericValidationPattern" />
		</property>
		<property name="summary" value="Date Type" />
		<property name="name" value="typeId" />
		<!-- label shown by the field group on maintenance screen-->
		<property name="label" value="Date Type" />
		<property name="description" value="Date Type" />
		<!-- <property name="required" value="true" /> -->
		<property name="optionsFinder">
			<bean
				class="org.kuali.rice.krad.keyvalues.PersistableBusinessObjectValuesFinder"
				p:businessObjectClass="org.martinlaw.bo.DateType"
				p:keyAttributeName="id"	p:labelAttributeName="name" p:includeBlankRow="true"/>
		</property>
		<property name="controlField">
				<bean parent="Uif-DropdownControl" />
		</property>
	</bean>

</beans>
