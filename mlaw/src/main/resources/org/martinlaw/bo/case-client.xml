<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:p="http://www.springframework.org/schema/p"
	xsi:schemaLocation="http://www.springframework.org/schema/beans         
http://www.springframework.org/schema/beans/spring-beans.xsd">
	<!-- Copyright 2010-2011 Protosoft Ltd -->
	
	<bean id="case-client" parent="case-client-parentBean" />

	<bean id="case-client-parentBean" abstract="true"
		parent="martinlaw_shared_person_parentBean">
		<property name="businessObjectClass" value="org.martinlaw.bo.CourtCaseClient" />
		<property name="titleAttribute" value="principalName" />
		<property name="attributes">
			<list>
				<ref bean="case-client-principal-name" />
			</list>
		</property>
		<property name="objectLabel" value="Client" />
	</bean>

	<!-- Attribute Definitions -->
	<bean id="case-client-principal-name" parent="martinlaw-shared-principal-name"
		p:label="Client Name" />

</beans>
