  <bean id="case-client" parent="case-client-parentBean"/>

  <bean id="case-client-parentBean" abstract="true" parent="BusinessObjectEntry">
    <property name="businessObjectClass" value="org.martinlaw.bo.CourtCaseClient"/>
    <property name="inquiryDefinition">
      <ref bean="case-client-inquiryDefinition"/>
    </property>
    <property name="lookupDefinition">
      <ref bean="case-client-lookupDefinition"/>
    </property>
    <property name="titleAttribute" value="principalName"/>
    <property name="attributes">
      <list>
      <!-- These are meant to be auto-gen, the id is auto-inc, the case-client-id is from the associated court case 
      	<ref bean="case-client-id"/>
        <ref bean="case-client-case-id"/>
       -->
        <ref bean="case-client-principal-name"/>
      </list>
    </property>
    <property name="objectLabel" value="Client"/>
    
    <property name="relationships">
      <list>
		<bean parent="RelationshipDefinition">
          <property name="objectAttributeName" value="person"/>
          <property name="primitiveAttributes">
            <list>
              <bean parent="PrimitiveAttributeDefinition" p:sourceName="principalName" p:targetName="principalName"/>
            </list>
          </property>
          <property name="supportAttributes">
            <list>
              <bean parent="SupportAttributeDefinition" p:identifier="true" p:sourceName="principalName" p:targetName="principalName"/>
            </list>
          </property>
        </bean>
      </list>
    </property>
  </bean>

<!-- Attribute Definitions -->
 
 <bean id="case-client-principal-name" parent="case-client-principal-name-parentBean"/>

  <bean id="case-client-principal-name-parentBean" abstract="true" parent="AttributeDefinition">
    <property name="forceUppercase" value="false"/>
    <property name="shortLabel" value="name"/>
    <property name="maxLength" value="30"/>
    <property name="validationPattern">
      <bean parent="AnyCharacterValidationPattern"/>
    </property>
    <property name="control">
      <bean parent="TextControlDefinition" p:size="30"/>
    </property>
    <property name="required" value="true"/>
    <property name="summary" value="Client Name"/>
    <property name="name" value="principalName"/>
    <property name="label" value="Client Name"/>
    <property name="description" value="Client Name"/>
    <property name="controlField">
      <bean parent="Uif-TextControl" p:size="30"/>
    </property>
  </bean>

  
<!-- Business Object Inquiry Definition -->

  <bean id="case-client-inquiryDefinition" parent="case-client-inquiryDefinition-parentBean"/>

  <bean id="case-client-inquiryDefinition-parentBean" abstract="true" parent="InquiryDefinition">
    <property name="inquirySections">
      <list>
        <bean parent="InquirySectionDefinition">
          <property name="numberOfColumns" value="1"/>
          <property name="inquiryFields">
            <list>
            <bean parent="FieldDefinition" p:attributeName="principalName"/>
            </list>
          </property>
          <property name="title" value="Client Name"/>
        </bean>
      </list>
    </property>
    <property name="title" value="Client Inquiry"/>
  </bean>

<!-- Business Object Lookup Definition -->


  <bean id="case-client-lookupDefinition" parent="case-client-lookupDefinition-parentBean"/>

  <bean id="case-client-lookupDefinition-parentBean" abstract="true" parent="LookupDefinition">
    
    <property name="defaultSort">
      <bean parent="SortDefinition">
      </bean>
    </property>
    <property name="lookupFields">
      <list>
        <bean parent="FieldDefinition" p:attributeName="principalName"/>
      </list>
    </property>
    <property name="resultFields">
      <list>
        <bean parent="FieldDefinition" p:attributeName="principalName"/>
      </list>
    </property>
    <property name="title" value="Case Client Lookup"/>
  </bean>
</beans>
