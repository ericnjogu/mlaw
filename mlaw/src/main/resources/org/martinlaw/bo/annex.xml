  <bean id="annex-bo" parent="annex-bo-parentBean" />

	<bean id="annex-bo-parentBean" abstract="true"
		parent="BusinessObjectEntry">
		<property name="businessObjectClass" value="org.martinlaw.bo.Annex" />
		<property name="inquiryDefinition">
			<ref bean="annex-bo-inquiryDefinition" />
		</property>
		<property name="lookupDefinition">
			<ref bean="annex-bo-lookupDefinition" />
		</property>
		<property name="titleAttribute" value="annexDocumentNumber" />
    <property name="objectLabel" value="Annex" />
    
    <property name="relationships">
      <list>
		<bean parent="RelationshipDefinition">
          <property name="objectAttributeName" value="annexDocument"/>

          <property name="targetClass" value="org.martinlaw.bo.AnnexDocument" />
          <property name="primitiveAttributes">
            <list>
              <bean parent="PrimitiveAttributeDefinition" p:sourceName="annexDocumentNumber" p:targetName="documentNumber"/>
            </list>
          </property>
          <!-- <property name="supportAttributes">
            <list>
              <bean parent="SupportAttributeDefinition" p:identifier="true" p:sourceName="annex.annexDocumentNumber" p:targetName="documentNumber"/>
            </list>
          </property> -->
        </bean>
         
      </list>
    </property>
    
    <property name="attributes">
      <list>
      	<ref bean="annex-bo-id"/>
      	<ref bean="annex-bo-document-number"/>
      	<!-- expose only type id as a field in the jsp, the rest are for lookup/inquiry -->
        <ref bean="annex-bo-typeId"/>
        <ref bean="annex-bo-type"/>
        <ref bean="annex-bo-description"/>
        <ref bean="annex-bo-explanation"/>
      </list>
    </property>
  </bean>

<!-- Attribute Definitions -->
	<bean id="annex-bo-id" parent="martinlaw-shared-id"/>
	
	<bean id="annex-bo-document-number" parent="annex-doc-number">
		<property name="name" value="annexDocumentNumber"/>
	</bean>

  <bean id="annex-bo-typeId" parent="annex-bo-typeId-parentBean"/>
	<!-- This bean config allows all types available to be displayed as a drop down list -->
  <bean id="annex-bo-typeId-parentBean" abstract="true" parent="AttributeDefinition">
    <property name="control">
      <bean parent="SelectControlDefinition" p:businessObjectClass="org.martinlaw.bo.AnnexType" 
      p:valuesFinderClass="org.kuali.rice.kns.lookup.keyvalues.PersistableBusinessObjectValuesFinder" 
      p:includeKeyInLabel="false" p:keyAttribute="id" p:labelAttribute="value"/>
    </property>
    <property name="name" value="typeId"/>
    <property name="required" value="true"/>
    <property name="label" value="Type"/>
    <property name="maxLength" value="50"/>
  </bean>
  
  <bean id="annex-bo-type" parent="annex-type-text">
  <property name="name" value="annexType.value"/>
  </bean>
  <!-- display header values from document header - beans in  /rice-1.0.3.1/impl/src/main/resources/org/kuali/rice/kns/bo/datadictionary/DocumentHeader.xml-->
  <bean id="annex-bo-description" parent="DocumentHeader-documentDescription">
  <property name="name" value="annexDocument.documentHeader.documentDescription"/>
  </bean>
  <bean id="annex-bo-explanation" parent="DocumentHeader-explanation">
  <property name="name" value="annexDocument.documentHeader.explanation"/>
  </bean>
  
  <!-- Business Object Inquiry Definition -->


	<bean id="annex-bo-inquiryDefinition" parent="annex-bo-inquiryDefinition-parentBean" />

	<bean id="annex-bo-inquiryDefinition-parentBean" abstract="true"
		parent="InquiryDefinition">
		<property name="inquirySections">
			<list>
				<bean parent="InquirySectionDefinition">
					<property name="numberOfColumns" value="3" />
					<property name="inquiryFields">
						<list>
							<bean parent="FieldDefinition" p:attributeName="id"/>
							<bean parent="FieldDefinition" p:attributeName="annexDocumentNumber" />
							<bean parent="FieldDefinition" p:attributeName="annexDocument.documentHeader.documentDescription" />
							<bean parent="FieldDefinition" p:attributeName="annexDocument.documentHeader.explanation" />
						</list>
					</property>
					<property name="title" value="Details" />
				</bean>
			</list>
		</property>
		<property name="title" value="Annex Inquiry" />
	</bean>

	<!-- Business Object Lookup Definition -->


	<bean id="annex-bo-lookupDefinition" parent="annex-bo-lookupDefinition-parentBean" />

	<bean id="annex-bo-lookupDefinition-parentBean" abstract="true"
		parent="LookupDefinition">

		<property name="defaultSort">
			<bean parent="SortDefinition">
			</bean>
		</property>
		<property name="lookupFields">
			<list>
				<bean parent="FieldDefinition" p:attributeName="annexDocumentNumber" />
							<bean parent="FieldDefinition" p:attributeName="annexDocument.documentHeader.documentDescription" />
							<bean parent="FieldDefinition" p:attributeName="annexDocument.documentHeader.explanation" />
			</list>
		</property>
		<property name="resultFields">
			<list>
				<bean parent="FieldDefinition" p:attributeName="annexDocumentNumber" />
							<bean parent="FieldDefinition" p:attributeName="annexDocument.documentHeader.documentDescription" />
							<bean parent="FieldDefinition" p:attributeName="annexDocument.documentHeader.explanation" />
			</list>
		</property>
		<property name="title" value="Annex Lookup" />
	</bean>
  
  
  </beans>
