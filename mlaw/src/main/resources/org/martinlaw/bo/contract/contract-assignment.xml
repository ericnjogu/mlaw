<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:p="http://www.springframework.org/schema/p"
	xsi:schemaLocation="http://www.springframework.org/schema/beans         
http://www.springframework.org/schema/beans/spring-beans.xsd">

	<!-- Copyright 2012 Protosoft Ltd -->

	<bean id="contract_assignment_bo" parent="BusinessObjectEntry">
		<property name="businessObjectClass" value="org.martinlaw.bo.contract.Assignment" />
		<property name="attributes">
			<list>
				<ref bean="contract_assignment_bo_id" />
				<ref bean="contract_assignment_bo_contractId" />
			</list>
		</property>
		<property name="objectLabel" value="Contract Assignment" />
		<property name="relationships">
      <list>
		<bean parent="RelationshipDefinition">
          <property name="objectAttributeName" value="contract"/>
          <property name="primitiveAttributes">
            <list>
              <bean parent="PrimitiveAttributeDefinition" p:sourceName="contractId" p:targetName="id"/>
            </list>
          </property>
          <property name="supportAttributes">
            <list>
              <bean parent="SupportAttributeDefinition" p:identifier="true" p:sourceName="contractId" p:targetName="id"/>
            </list>
          </property>
        </bean>
      </list>
    </property>
	</bean>

	<!-- Attribute Definitions -->
	<bean id="contract_assignment_bo_id" parent="martinlaw-shared-id" />

	<bean id="contract_assignment_bo_contractId" parent="AttributeDefinition">
		<property name="maxLength" value="20"/>
		<property name="validationPattern">
			<bean parent="NumericValidationPattern"/>
		</property>
		<property name="name" value="contractId" />
		<property name="label" value="Contract" />
		<property name="required" value="true" />
		<property name="controlField">
			<bean parent="Uif-TextControl" p:size="20" />
		</property>
	</bean>
</beans>
