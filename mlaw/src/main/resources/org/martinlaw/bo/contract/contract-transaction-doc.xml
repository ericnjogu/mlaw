<beans xmlns="http://www.springframework.org/schema/beans" 
xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
xmlns:p="http://www.springframework.org/schema/p" 
xsi:schemaLocation="http://www.springframework.org/schema/beans         
http://www.springframework.org/schema/beans/spring-beans.xsd">

  <bean id="contract_transaction_doc_entry" parent="martinlaw_shared_matter_transaction_doc_entry">
		<property name="documentTypeName" value="ContractTransactionDocument" />
		<property name="documentClass" value="org.martinlaw.bo.contract.TransactionDoc" />
		<property name="attributes">
			<list merge="true">
				<bean parent="martinlaw_shared_matterId_attr" p:label="Contract Id"/>
			</list>
		</property>
	<property name="workflowAttributes">
    	<ref bean="contract_transaction_doc_entry_workflow_attrs"/>
	</property>
	<property name="relationships">
      <list>
		<bean parent="martinlaw_shared_matter_relationship" p:targetClass="org.martinlaw.bo.contract.Contract"/>
		<bean parent="martinlaw_shared_consideration_relationship" p:targetClass="org.martinlaw.bo.contract.Consideration"/>
      </list>
    </property>
  </bean> 
  
  <bean id="contract_transaction_doc_entry_workflow_attrs" parent="WorkflowAttributes">
		<property name="searchingTypeDefinitions">
		<list>
			<bean class="org.kuali.rice.krad.datadictionary.SearchingTypeDefinition">
				<property name="searchingAttribute">
					<bean parent="contract_transaction_doc_entry_search_attr">
						<property name="attributeName" value="date" />
					</bean>
				</property>
				<property name="documentValues">
					<list>
						<value>date</value>
					</list>
				</property>
			</bean>
			<bean class="org.kuali.rice.krad.datadictionary.SearchingTypeDefinition">
				<property name="searchingAttribute">
					<bean parent="contract_transaction_doc_entry_search_attr">
						<property name="attributeName" value="clientPrincipalName" />
					</bean>
				</property>
				<property name="documentValues">
					<list>
						<value>clientPrincipalName</value>
					</list>
				</property>
			</bean>
			<bean class="org.kuali.rice.krad.datadictionary.SearchingTypeDefinition">
				<property name="searchingAttribute">
					<bean parent="contract_transaction_doc_entry_search_attr">
						<property name="attributeName" value="transactionTypeId" />
					</bean>
				</property>
				<property name="documentValues">
					<list>
						<value>transactionTypeId</value>
					</list>
				</property>
			</bean>
			<bean class="org.kuali.rice.krad.datadictionary.SearchingTypeDefinition">
				<property name="searchingAttribute">
					<bean parent="contract_transaction_doc_entry_search_attr">
						<property name="attributeName" value="matterId" />
					</bean>
				</property>
				<property name="documentValues">
					<list>
						<value>matterId</value>
					</list>
				</property>
			</bean>

			<bean class="org.kuali.rice.krad.datadictionary.SearchingTypeDefinition">
				<property name="searchingAttribute">
					<bean parent="contract_transaction_doc_entry_search_attr">
						<property name="attributeName" value="amount" />
					</bean>
				</property>
				<property name="documentValues">
					<list>
						<value>amount</value>
					</list>
				</property>
			</bean>
			
			<bean class="org.kuali.rice.krad.datadictionary.SearchingTypeDefinition">
				<property name="searchingAttribute">
					<bean parent="contract_transaction_doc_entry_search_attr">
						<property name="attributeName" value="considerationId" />
					</bean>
				</property>
				<property name="documentValues">
					<list>
						<value>considerationId</value>
					</list>
				</property>
			</bean>
			</list>
		</property>
	</bean>
	
	<bean id="contract_transaction_doc_entry_search_attr" parent="martinlaw_shared_workflow_search_attr_parent"
		abstract="true">
		<property name="businessObjectClassName" value="org.martinlaw.bo.contract.TransactionDoc" />
	</bean>

</beans>
