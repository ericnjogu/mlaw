<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:p="http://www.springframework.org/schema/p"
	xsi:schemaLocation="http://www.springframework.org/schema/beans         
http://www.springframework.org/schema/beans/spring-beans.xsd">

	<bean id="contract_consideration_bo" parent="martinlaw_shared_consideration_bo" p:jstlKey="contract_consideration">
		<property name="businessObjectClass" value="org.martinlaw.bo.contract.Consideration" />
		<property name="objectLabel" value="Contract Consideration" />
		<property name="relationships">
	      <list>
			<bean parent="martinlaw_shared_matter_relationship" p:targetClass="org.martinlaw.bo.contract.Contract"/>
	      </list>
	    </property>
	    <property name="attributes" >
			<list merge="true">
				<bean parent="martinlaw_shared_matterId_attr" p:label="Contract" />
				<bean parent="martinlaw_shared_consideration_bo_consideration_type_id">
					<property name="optionsFinder">
						<bean class="org.martinlaw.keyvalues.ContractConsiderationTypeKeyValues" />
					</property>
				</bean>
			</list>
		</property>
	</bean>
</beans>
