<beans xmlns="http://www.springframework.org/schema/beans" 
xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
xmlns:p="http://www.springframework.org/schema/p" 
xsi:schemaLocation="http://www.springframework.org/schema/beans         
http://www.springframework.org/schema/beans/spring-beans.xsd">

  <bean id="contract_assignment_maint_document_entry" parent="martinlaw_shared_assignment_MaintDocument">
    <property name="dataObjectClass" value="org.martinlaw.bo.contract.Assignment"/>
    <property name="documentTypeName" value="ContractAssignmentMaintenanceDocument"/>
    <property name="workflowAttributes">
    	<ref bean="contract_assignment_maint_document_entry_workflow_attrs"/>
	</property>
  </bean>
  
  <bean id="contract_assignment_maint_document_entry_workflow_attrs" parent="WorkflowAttributes">
	<property name="searchingTypeDefinitions">
		<list>
			<bean class="org.kuali.rice.krad.datadictionary.SearchingTypeDefinition">
				<property name="searchingAttribute">
					<bean parent="martinlaw_shared_workflow_search_attr_parent">
						<property name="businessObjectClassName" value="org.martinlaw.bo.contract.Assignment" />
						<property name="attributeName" value="matter.localReference" />
					</bean>
				</property>
				<property name="documentValues">
					<list>
						<value>newMaintainableObject.dataObject.matter.localReference</value>
					</list>
				</property>
			</bean>
			<bean class="org.kuali.rice.krad.datadictionary.SearchingTypeDefinition">
				<property name="searchingAttribute">
					<bean parent="martinlaw_shared_workflow_search_attr_parent">
						<property name="businessObjectClassName" value="org.martinlaw.bo.contract.Assignment" />
						<property name="attributeName" value="matter.name" />
					</bean>
				</property>
				<property name="documentValues">
					<list>
						<value>newMaintainableObject.dataObject.matter.name</value>
					</list>
				</property>
			</bean>
			
		</list>
	</property>
	</bean>

</beans>
