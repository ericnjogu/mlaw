<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:p="http://www.springframework.org/schema/p"
	xsi:schemaLocation="http://www.springframework.org/schema/beans         
http://www.springframework.org/schema/beans/spring-beans.xsd">
	<!-- Copyright 2010-2011 Protosoft Ltd -->
	
	<bean id="contract" parent="contract-parentBean" />

	<bean id="contract-parentBean" abstract="true" parent="BusinessObjectEntry">
	<property name="businessObjectClass" value="org.martinlaw.bo.contract.Contract" />
	<property name="titleAttribute" value="name" />
	<property name="attributes">
		<list>
			<ref bean="contract-id" />
			<ref bean="contract-name" />
			<ref bean="contract-statusId" />
			<ref bean="contract-localReference" />
			<ref bean="contract-contractType" />
			<ref bean="contract-serviceOffered" />
			<ref bean="contract-summaryOfTerms" />

			<ref bean="contract_consideration_amount" />
			<ref bean="contract_consideration_currency" />
			<ref bean="contract_consideration_description" />

			<ref bean="contract_duration_startDate" />
			<ref bean="contract_duration_endDate" />
			<ref bean="contract_duration_duration" />
			<ref bean="contract_duration_timeUnit" />
				
				<!-- client consideration -->
			<bean parent="martinlaw_shared_consideration_bo_amount" p:name="consideration.amount" p:label="Client Consideration Amount"/>
			<bean parent="martinlaw_shared_consideration_bo_currency"
				p:name="consideration.currency" />
			<bean parent="martinlaw_shared_consideration_bo_description"
				p:name="consideration.description" />
		</list>
	</property>
	<property name="boNotesEnabled" value="true" />
	<property name="objectLabel" value="Contract" />

	<property name="relationships">
		<list>
			<bean parent="RelationshipDefinition">
				<property name="objectAttributeName" value="contractConsideration" />
				<property name="primitiveAttributes">
					<list>
						<bean parent="PrimitiveAttributeDefinition" p:sourceName="contractConsiderationId"
							p:targetName="id" />
					</list>
				</property>
				<property name="supportAttributes">
					<list>
						<bean parent="SupportAttributeDefinition" p:identifier="true"
							p:sourceName="contractConsideration.amount" p:targetName="amount" />
					</list>
				</property>
			</bean>

			<bean parent="RelationshipDefinition">
				<property name="objectAttributeName" value="contractDuration" />
				<property name="primitiveAttributes">
					<list>
						<bean parent="PrimitiveAttributeDefinition" p:sourceName="contractDurationId"
							p:targetName="id" />
					</list>
				</property>
			</bean>
		</list>
	</property>
	<property name="collections">
	     <list>
	       <bean parent="CollectionDefinition" p:name="parties" p:label="parties" p:shortLabel="parties" p:elementLabel="party"
	       		p:dataObjectClass="org.martinlaw.bo.contract.ContractParty"/>
	       <bean parent="CollectionDefinition" p:name="signatories" p:label="signatories" p:shortLabel="signatories" p:elementLabel="signatory"
	       		p:dataObjectClass="org.martinlaw.bo.contract.ContractSignatory"/>
	       	<bean parent="CollectionDefinition" p:name="clients" p:label="clients" p:shortLabel="clients" p:elementLabel="client"
	        	p:dataObjectClass="org.martinlaw.bo.contract.Client"/>
	     </list>
    </property>
</bean>

	<!-- Attribute Definitions -->
	<bean id="contract_duration_startDate" parent="contract_duration_bo_startDate" p:name="contractDuration.startDate" />
	
	<bean id="contract_duration_endDate" parent="contract_duration_bo_endDate" p:name="contractDuration.endDate" />
	
	<bean id="contract_duration_duration" parent="contract_duration_bo_duration" p:name="contractDuration.duration" />
	
	<bean id="contract_duration_timeUnit" parent="contract_duration_bo_durationTimeUnit" p:name="contractDuration.durationTimeUnit" />
	
	<bean id="contract_consideration_amount" parent="martinlaw_shared_consideration_bo_amount" p:name="contractConsideration.amount" p:label="Contract Amount"/>
	
	<bean id="contract_consideration_currency" parent="martinlaw_shared_consideration_bo_currency" p:name="contractConsideration.currency"/>
	
	<bean id="contract_consideration_description" parent="martinlaw_shared_consideration_bo_description" p:name="contractConsideration.description"/>
	
	<bean id="contract-id" parent="martinlaw-shared-id-parentBean" p:label="Contract Id" />

	<bean id="contract-localReference" parent="martinlaw-shared-localReference-parentBean" />

	<bean id="contract-name" parent="martinlaw-shared-name" p:label="Contract Name"/>

	<bean id="contract-statusId" parent="contract-statusId-parentBean" />

	<bean id="contract-statusId-parentBean" parent="martinlaw-shared-statusId-parentBean">	
		<property name="optionsFinder">
			<bean class="org.martinlaw.keyvalues.ContractStatusKeyValues" />
		</property>
		<!-- required for display in kns custom document search -->
		<property name="control">
			<bean parent="SelectControlDefinition" p:size="20" p:valuesFinderClass="org.martinlaw.keyvalues.ContractStatusKeyValues"/>
		</property>
	</bean>
	
	<bean id="contract-contractType" parent="AttributeDefinition">
		<property name="maxLength" value="100"/>
		<property name="forceUppercase" value="true" />
		<property name="shortLabel" value="Contract Type" />
		<property name="validationPattern">
			<bean parent="NumericValidationPattern"/>
		</property>
		<property name="summary" value="Contract Type" />
		<property name="name" value="typeId" />
		<property name="label" value="Contract Type" />
		<property name="description" value="Contract Type" />
		<property name="required" value="true" />
		<property name="optionsFinder">
			<bean
				class="org.kuali.rice.krad.keyvalues.PersistableBusinessObjectValuesFinder"
				p:businessObjectClass="org.martinlaw.bo.contract.ContractType"
				p:keyAttributeName="id"	p:labelAttributeName="name" p:includeBlankRow="true"/>
		</property>
		<property name="controlField">
				<bean parent="Uif-DropdownControl" />
		</property>
		<!-- required for display in kns custom document search -->
		<property name="control">
			<bean parent="SelectControlDefinition" p:size="20" p:valuesFinderClass="org.kuali.rice.krad.keyvalues.PersistableBusinessObjectValuesFinder"
				p:businessObjectClass="org.martinlaw.bo.contract.ContractType"
				p:keyAttribute="id"	p:labelAttribute="name" p:includeBlankRow="true" p:includeKeyInLabel="false"/>
		</property>
	</bean>
	
	<bean id="contract-serviceOffered" parent="AttributeDefinition">
    <property name="forceUppercase" value="false"/>
    <property name="shortLabel" value="Service Offered"/>
    <property name="validationPattern">
      <bean parent="AnyCharacterValidationPattern"  p:allowWhitespace="true"/>
    </property>
    <property name="summary" value="Service Offered"/>
    <property name="name" value="serviceOffered"/>
    <property name="label" value="Service Offered"/>
    <property name="description" value="Service Offered"/>
    <property name="controlField">
      <bean parent="Uif-TextAreaControl"  p:rows="5" p:cols="50" p:maxLength="255"/>
    </property>  
  </bean>
  
  <bean id="contract-summaryOfTerms" parent="AttributeDefinition">
    <property name="forceUppercase" value="false"/>
    <property name="shortLabel" value="Summary of Terms"/>
    <property name="validationPattern">
      <bean parent="AnyCharacterValidationPattern"  p:allowWhitespace="true"/>
    </property>
    <property name="summary" value="Summary of Terms"/>
    <property name="name" value="summaryOfTerms"/>
    <property name="label" value="Summary of Terms  and Conditions"/>
    <property name="description" value="Summary of Terms  and Conditions"/>
    <property name="controlField">
      <bean parent="Uif-TextAreaControl"  p:rows="5" p:cols="50" p:maxLength="255"/>
    </property>  
  </bean>

</beans>
