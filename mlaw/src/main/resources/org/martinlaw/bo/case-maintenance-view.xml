<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:p="http://www.springframework.org/schema/p"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
                    http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">
  

  <bean id="case_maintenance_view" parent="Uif-MaintenanceView">
    <property name="headerText" value="Case Maintenance"/>
    <property name="dataObjectClassName" value="org.martinlaw.bo.CourtCase"/>
    <property name="items">
      <list merge="true">
        <bean parent="Uif-MaintenanceGridSection">
          <property name="items">
            <list>
              <bean parent="Uif-InputField" p:propertyName="id"/>
              <bean parent="Uif-InputField" p:propertyName="localReference"/>
              <bean parent="Uif-InputField" p:propertyName="courtReference"/>
              <bean parent="Uif-InputField" p:propertyName="name"/>
              <bean parent="Uif-InputField" p:propertyName="statusId"/>
             <!--  <bean parent="Uif-InputField" p:propertyName="extension.accountTypeCode">
                <property name="quickfinder">
                  <bean parent="Uif-QuickFinderByScript"/>
                </property>
              </bean>
              <bean parent="Uif-InputField" p:propertyName="subAccount">
                <property name="quickfinder">
                  <bean parent="Uif-QuickFinderByScript"/>
                </property>
                <property name="quickfinder.dataObjectClassName" value="edu.sampleu.travel.bo.TravelAccount"/>
                <property name="quickfinder.fieldConversions">
                  <map>
                    <entry key="number" value="subAccount"/>
                    <entry key="name" value="subAccountName"/>
                  </map>
                </property>
                <property name="quickfinder.lookupParameters" value="subAccountName:name"/>
              </bean>
              <bean parent="Uif-InputField" p:propertyName="subAccountName"/>
              <bean parent="Uif-InputField" p:propertyName="createDate"/>
              <bean parent="Uif-InputField" p:propertyName="subsidizedPercent"/>
              <bean parent="Uif-InputField" p:propertyName="foId" >
                <property name="quickfinder">
                  <bean parent="Uif-QuickFinderByScript"/>
                </property>
              </bean> -->
            </list>
          </property>
          <property name="headerText" value="Case Information"/>
        </bean>
        <bean parent="Uif-MaintenanceStackedCollectionSection">
          <property name="headerText" value="Hearing Dates"/>
          <property name="collectionObjectClass" value="org.martinlaw.bo.HearingDate"/>
          <property name="propertyName" value="hearingDates"/>
          <property name="items">
            <list>
              <bean parent="Uif-InputField" p:propertyName="date"/>
              <bean parent="Uif-InputField" p:propertyName="comment"/>
            </list>
          </property>
          <property name="layoutManager.summaryTitle" value="Hearing Date"/>
          <property name="layoutManager.summaryFields">
            <list>
              <value>date</value>
            </list>
          </property>
        </bean>
        
        <bean parent="Uif-MaintenanceStackedCollectionSection">
          <property name="headerText" value="Clients"/>
          <property name="collectionObjectClass" value="org.martinlaw.bo.CourtCaseClient"/>
          <property name="propertyName" value="clients"/>
          <property name="items">
            <list>
              <bean parent="Uif-InputField" p:propertyName="principalName">
              <property name="quickfinder">
                  <bean parent="Uif-QuickFinderByScript"/>
                </property>
              </bean>
            </list>
          </property>
          <property name="layoutManager.summaryTitle" value="Client"/>
          <property name="layoutManager.summaryFields">
            <list>
              <value>person.lastName</value>
              <value>person.firstName</value>
            </list>
          </property>
        </bean>
        
        <bean parent="Uif-MaintenanceStackedCollectionSection">
          <property name="headerText" value="Witnesses"/>
          <property name="collectionObjectClass" value="org.martinlaw.bo.CourtCaseWitness"/>
          <property name="propertyName" value="witnesses"/>
          <property name="items">
            <list>
              <bean parent="Uif-InputField" p:propertyName="principalName">
              <property name="quickfinder">
                  <bean parent="Uif-QuickFinderByScript"/>
                </property>
              </bean>
            </list>
          </property>
          <property name="layoutManager.summaryTitle" value="Witness"/>
          <property name="layoutManager.summaryFields">
            <list>
              <value>person.lastName</value>
              <value>person.firstName</value>
            </list>
          </property>
        </bean>
        
        <bean parent="Uif-MaintenanceStackedCollectionSection">
          <property name="headerText" value="Fees Received"/>
          <property name="collectionObjectClass" value="org.martinlaw.bo.Fee"/>
          <property name="propertyName" value="fees"/>
          <property name="items">
            <list>
              <bean parent="Uif-InputField" p:propertyName="amount"/>
              <bean parent="Uif-InputField" p:propertyName="date"/>
              <bean parent="Uif-InputField" p:propertyName="description"/>
            </list>
          </property>
          <property name="layoutManager.summaryTitle" value="Fee"/>
          <property name="layoutManager.summaryFields">
            <list>
            	<value>amount</value>
              	<value>date</value>
            </list>
          </property>
        </bean>
      </list>
    </property>
  </bean>

</beans>