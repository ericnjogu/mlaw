	<bean id="annex-doc" parent="annex-doc-parentBean" />

	<bean id="annex-doc-parentBean" abstract="true"
		parent="TransactionalDocumentEntry">


		<property name="documentTypeName" value="AnnexDocument" />
		<property name="documentClass" value="org.martinlaw.bo.AnnexDocument" />

		<property name="businessRulesClass"
			value="org.kuali.rice.kns.rules.TransactionalDocumentRuleBase" />

		<!-- This is a mere extension - use the parent <property name="documentAuthorizerClass" 
			value="edu.sampleu.travel.document.authorizer.TravelDocumentAuthorizer"/> -->
		<property name="documentAuthorizerClass"
			value="org.kuali.rice.kns.document.authorization.TransactionalDocumentAuthorizerBase" />
		<!-- use the base class as there is not anything to customize for now <property 
			name="documentPresentationControllerClass" value="edu.sampleu.travel.document.authorizer.TravelDocumentPresentationController"/> -->
		<property name="documentPresentationControllerClass"
			value="org.kuali.rice.kns.document.authorization.TransactionalDocumentPresentationControllerBase" />
		<property name="allowsNoteFYI" value="true" />
		<property name="usePessimisticLocking" value="true" />

		<property name="attributes">
			<list>
				<ref bean="annex-doc-number" />
				<!-- expose only type id as a field in the jsp, the rest are for lookup/inquiry -->
				<ref bean="annex-doc-annexTypeId" />
				<ref bean="annex-doc-description"/>
        <ref bean="annex-doc-explanation"/>
			</list>
		</property>
		
		<property name="relationships">
      <list>
		<bean parent="RelationshipDefinition">
          <property name="objectAttributeName" value="annex"/>

          <property name="targetClass" value="org.martinlaw.bo.Annex" />
          <property name="primitiveAttributes">
            <list>
              <bean parent="PrimitiveAttributeDefinition" p:sourceName="documentNumber" p:targetName="annexDocumentNumber"/>
            </list>
          </property>
          <property name="supportAttributes">
            <list>
              <bean parent="SupportAttributeDefinition" p:identifier="true" p:sourceName="annex.typeId" p:targetName="typeId"/>
            </list>
          </property>
        </bean>
         
      </list>
    </property>
		
		
	</bean>

	<!-- Attribute Definitions -->
	<bean id="annex-doc-number" parent="martinlaw-shared-id">
		<property name="name" value="documentNumber" />
		<property name="label" value="Document Number" />
	</bean>

	<bean id="annex-doc-annexTypeId" parent="annex-bo-typeId">
		<property name="name" value="annex.typeId" />
	</bean>
	
	<!-- display header values from document header - beans in  /rice-1.0.3.1/impl/src/main/resources/org/kuali/rice/kns/bo/datadictionary/DocumentHeader.xml-->
  <bean id="annex-doc-description" parent="DocumentHeader-documentDescription">
  <property name="name" value="documentHeader.documentDescription"/>
  </bean>
  <bean id="annex-doc-explanation" parent="DocumentHeader-explanation">
  <property name="name" value="documentHeader.explanation"/>
  </bean>

</beans>
