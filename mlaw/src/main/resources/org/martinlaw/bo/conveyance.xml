<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:p="http://www.springframework.org/schema/p"
	xsi:schemaLocation="http://www.springframework.org/schema/beans         
http://www.springframework.org/schema/beans/spring-beans.xsd">
	<!-- Copyright 2010-2011 Protosoft Ltd -->
	
	<bean id="conveyance" parent="conveyance-parentBean" />

	<bean id="conveyance-parentBean" abstract="true" parent="BusinessObjectEntry">
		<property name="businessObjectClass" value="org.martinlaw.bo.Conveyance" />
		<property name="titleAttribute" value="name" />
		<property name="attributes">
			<list>
				<ref bean="conveyance-id" />
				<ref bean="conveyance-name" />
				<ref bean="conveyance-statusId" />
				<ref bean="conveyance-localReference" />
				<ref bean="conveyance-type-id" />
			</list>
		</property>
		<property name="boNotesEnabled" value="true" />
		<property name="objectLabel" value="name" />
	</bean>

	<!-- Attribute Definitions -->

	<bean id="conveyance-id" parent="martinlaw-shared-id-parentBean" p:label="Conveyance Id" />

	<bean id="conveyance-localReference" parent="martinlaw-shared-localReference-parentBean" />

	<bean id="conveyance-name" parent="martinlaw-shared-name" />

	<bean id="conveyance-statusId" parent="conveyance-statusId-parentBean" />

	<bean id="conveyance-statusId-parentBean" 
		parent="martinlaw-shared-statusId-parentBean">	
		<property name="optionsFinder">
			<bean class="org.martinlaw.keyvalues.ConveyanceStatusKeyValues" />
		</property>
	</bean>
	
	<bean id="conveyance-type-id"	parent="AttributeDefinition">
		<property name="forceUppercase" value="true" />
		<property name="shortLabel" value="Conveyance Type" />
		<property name="maxLength" value="100" />
		<property name="validationPattern">
			<bean parent="NumericValidationPattern" />
		</property>
		<property name="summary" value="Conveyance Type" />
		<property name="name" value="typeId" />
		<!-- label shown by the field group on maintenance screen-->
		<property name="label" value="Conveyance Type" />
		<property name="description" value="Conveyance Type" />
		<property name="required" value="true" />
		<property name="optionsFinder">
			<bean
				class="org.kuali.rice.krad.keyvalues.PersistableBusinessObjectValuesFinder"
				p:businessObjectClass="org.martinlaw.bo.ConveyanceType"
				p:keyAttributeName="id"	p:labelAttributeName="name" p:includeBlankRow="true"/>
		</property>
		<property name="controlField">
				<bean parent="Uif-DropdownControl" />
			</property>
	</bean>

</beans>
