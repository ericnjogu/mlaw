<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:p="http://www.springframework.org/schema/p"
	xsi:schemaLocation="http://www.springframework.org/schema/beans         
http://www.springframework.org/schema/beans/spring-beans.xsd">

	<bean id="external_resource_bo" parent="BusinessObjectEntry">
		<property name="businessObjectClass" value="org.martinlaw.bo.work.ExternalResource" />
		<property name="titleAttribute" value="id" />
		<property name="attributes">
			<list>
				<bean parent="martinlaw-shared-id" />
				<ref bean="external_resource_bo_url_attr" />
			</list>
		</property>
		<property name="objectLabel" value="External Resource" />
	</bean>

	<!-- Attribute Definitions -->

	<bean id="external_resource_bo_url_attr" parent="AttributeDefinition">
		<property name="maxLength" value="1000" />
		<property name="validationPattern">
			<bean parent="AnyCharacterValidationPattern" p:allowWhitespace="true" />
		</property>
		<property name="required" value="true" />
		<property name="name" value="url" />
		<property name="label" value="Value" />
		<property name="controlField">
			<bean parent="Uif-TextAreaControl" p:cols="100" p:rows="2">
				<property name="toolTip">
				  <bean parent="Uif-Tooltip" p:onFocus="true" p:onMouseHover="false"
				  p:tooltipContent="You can drag and drop a file or internet link here.&lt;bt&gt; 
				  	Copying and pasting an address from an email, document, file explorer, browser or any source should work."/>
				</property>
			</bean>
		</property>
	</bean>
</beans>
