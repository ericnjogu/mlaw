<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:p="http://www.springframework.org/schema/p"
	xsi:schemaLocation="http://www.springframework.org/schema/beans         
http://www.springframework.org/schema/beans/spring-beans-2.0.xsd">

	<bean id="martinlaw_shared_scope_bo" parent="BusinessObjectEntry" abstract="true">
		<property name="attributes">
			<list>
				<ref bean="matter_scope_bo-id" />
				<ref bean="matter_scope_bo_qualifiedClassName" />
			</list>
		</property>
		<property name="objectLabel" value="Status" />
	</bean>
	
	<bean id="status_scope_bo" parent="martinlaw_shared_scope_bo">
		<property name="businessObjectClass" value="org.martinlaw.bo.StatusScope" />
		<property name="titleAttribute" value="Status Scope" />
	</bean>
	
	<bean id="event_type_scope_bo" parent="martinlaw_shared_scope_bo">
		<property name="businessObjectClass" value="org.martinlaw.bo.EventTypeScope" />
		<property name="titleAttribute" value="Event Type Scope" />
	</bean>
	
	<bean id="consideration_type_scope_bo" parent="martinlaw_shared_scope_bo">
		<property name="businessObjectClass" value="org.martinlaw.bo.ConsiderationTypeScope" />
		<property name="titleAttribute" value="Consideration Type Scope" />
	</bean>

	<!-- Attribute Definitions -->
	<!-- enabled to avoid error stacktraces about missing id attribute on inquiry 
		action -->
	<bean id="matter_scope_bo-id" parent="martinlaw-shared-id" />
	
	<bean id="matter_scope_bo_qualifiedClassName" parent="AttributeDefinition">
		<property name="maxLength" value="100" />
		<property name="validationPattern">
			<bean parent="AnyCharacterValidationPattern" p:allowWhitespace="false" />
		</property>
		<property name="summary" value="Scope" />
		<property name="name" value="qualifiedClassName" />
		<property name="label" value="Scope" />
		<property name="description" value="Scope" />
		<property name="required" value="true" />
		<property name="optionsFinder">
			<bean class="org.martinlaw.keyvalues.MatterScopeKeyValues" />
		</property>
		<property name="controlField">
			<bean parent="Uif-DropdownControl" />
		</property>
	</bean>
</beans>
