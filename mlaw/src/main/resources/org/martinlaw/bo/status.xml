<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:p="http://www.springframework.org/schema/p"
	xsi:schemaLocation="http://www.springframework.org/schema/beans         
http://www.springframework.org/schema/beans/spring-beans-2.0.xsd">

	<bean id="matter_status_bo" parent="matter_status_bo-parentBean" />

	<bean id="matter_status_bo-parentBean" abstract="true" parent="BusinessObjectEntry">
		<property name="businessObjectClass" value="org.martinlaw.bo.Status" />
		<property name="titleAttribute" value="status" />
		<property name="attributes">
			<list>
				<ref bean="matter_status_bo-id" />
				<ref bean="matter_status_bo-text" />
			</list>
		</property>
		<property name="objectLabel" value="Status" />
	</bean>

	<!-- Attribute Definitions -->
	<!-- enabled to avoid error stacktraces about missing id attribute on inquiry 
		action -->
	<bean id="matter_status_bo-id" parent="martinlaw-shared-id" />

	<bean id="matter_status_bo-text" parent="AttributeDefinition">
		<property name="forceUppercase" value="true" />
		<property name="shortLabel" value="Status" />
		<property name="maxLength" value="100" />
		<property name="validationPattern">
			<bean parent="AnyCharacterValidationPattern" p:allowWhitespace="true" />
		</property>
		<property name="required" value="true" />
		<property name="summary" value="Status" />
		<property name="name" value="status" />
		<property name="label" value="Status" />
		<property name="description" value="Status" />
		<property name="controlField">

			<bean parent="Uif-TextControl" p:size="60" />
		</property>
	</bean>
</beans>
