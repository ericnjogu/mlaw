<beans xmlns="http://www.springframework.org/schema/beans" 
xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
xmlns:p="http://www.springframework.org/schema/p" 
xsi:schemaLocation="http://www.springframework.org/schema/beans         
http://www.springframework.org/schema/beans/spring-beans-2.0.xsd">
<!--
 Copyright 2012 Protosoft Ltd.
-->

  <bean id="case-status" parent="case-status-parentBean"/>

  <bean id="case-status-parentBean" abstract="true" parent="BusinessObjectEntry">
    <property name="businessObjectClass" value="org.martinlaw.bo.Status"/>
    <property name="titleAttribute" value="status"/>
    <property name="attributes">
      <list>
      	<ref bean="case-status-id"/>
        <ref bean="case-status-text"/>
        <ref bean="case-status-type"/>
      </list>
    </property>
    <property name="objectLabel" value="Status"/>
  </bean>

<!-- Attribute Definitions -->
 <!-- enabled to avoid error stacktraces about missing id attribute on inquiry action -->
 <bean id="case-status-id" parent="martinlaw-shared-id"/>
 
  <bean id="case-status-text" parent="case-status-text-parentBean"/>

  <bean id="case-status-text-parentBean" abstract="true" parent="AttributeDefinition">
    <property name="forceUppercase" value="true"/>
    <property name="shortLabel" value="Status"/>
    <property name="maxLength" value="100"/>
    <property name="validationPattern">
      <bean parent="AnyCharacterValidationPattern" p:allowWhitespace="true"/>
    </property>
    <property name="required" value="true"/>
    <property name="summary" value="Status"/>
    <property name="name" value="status"/>
    <property name="label" value="Status"/>
    <property name="description" value="Status"/>
    <property name="controlField">
    
      <bean parent="Uif-TextControl" p:size="60"/>
    </property>
  </bean>
 
 <bean id="case-status-type" parent="case-status-type-parentBean" />

	<bean id="case-status-type-parentBean" abstract="true"
		parent="AttributeDefinition">
		<property name="maxLength" value="100"/>
		<property name="forceUppercase" value="true" />
		<property name="shortLabel" value="Status" />
		<property name="validationPattern">
			<bean parent="AnyCharacterValidationPattern" p:allowWhitespace="true" />
		</property>
		<property name="summary" value="Status Type" />
		<property name="name" value="type" />
		<property name="label" value="Status Type" />
		<property name="description" value="Status Type" />
		<property name="required" value="true" />
		<property name="optionsFinder">
			<bean class="org.martinlaw.keyvalues.StatusTypeKeyValues"/>
		</property>
		<property name="controlField">
				<bean parent="Uif-DropdownControl" />
			</property>
	</bean>
 
</beans>
