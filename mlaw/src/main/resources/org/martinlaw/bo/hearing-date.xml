  <bean id="court-case-hearing-date" parent="court-case-hearing-date-parentBean" />

  <bean id="court-case-hearing-date-parentBean" abstract="true" parent="BusinessObjectEntry">
    <property name="businessObjectClass" value="org.martinlaw.bo.HearingDate"/>
    <property name="inquiryDefinition">
      <ref bean="court-case-hearing-date-inquiryDefinition"/>
    </property>
    <property name="lookupDefinition">
      <ref bean="court-case-hearing-date-lookupDefinition"/>
    </property>
    <property name="titleAttribute" value="date"/>
    <property name="attributes">
      <list>    	
      	<ref bean="court-case-hearing-date-comment"/>
      	<ref bean="court-case-hearing-date-value"/>
      </list>
    </property>
    <property name="objectLabel" value="Hearing Date"/>
  </bean>

<!-- Attribute Definitions -->
 
 <bean id="court-case-hearing-date-comment" parent="court-case-hearing-date-comment-parentBean"/>

  <bean id="court-case-hearing-date-comment-parentBean" abstract="true" parent="AttributeDefinition">
    <property name="forceUppercase" value="false"/>
    <property name="shortLabel" value="Comment"/>
    <property name="maxLength" value="150"/>
    <property name="validationPattern">
      <bean parent="AnyCharacterValidationPattern"  p:allowWhitespace="true"/>
    </property>
    <property name="control">
      <bean parent="TextareaControlDefinition" p:rows="5" p:cols="30"/>
    </property>
    <property name="summary" value="Comment"/>
    <property name="name" value="comment"/>
    <property name="label" value="Comment"/>
    <property name="description" value="Comment"/>
    <property name="controlField">
      <bean parent="Uif-TextAreaControl"  p:rows="5" p:cols="30" p:maxLength="150"/>
    </property>
  </bean>
  

<bean id="court-case-hearing-date-value" parent="martinlaw-shared-date"/>

<!-- Business Object Inquiry Definition -->


  <bean id="court-case-hearing-date-inquiryDefinition" parent="court-case-hearing-date-inquiryDefinition-parentBean"/>

  <bean id="court-case-hearing-date-inquiryDefinition-parentBean" abstract="true" parent="InquiryDefinition">
    <property name="inquirySections">
      <list>
        <bean parent="InquirySectionDefinition">
          <property name="numberOfColumns" value="2"/>
          <property name="inquiryFields">
            <list>
            <bean parent="FieldDefinition" p:attributeName="date"/>
              <bean parent="FieldDefinition" p:attributeName="comment"/><!--  p:forceInquiry="true"/>  -->
            </list>
          </property>
          <property name="title" value="Details"/>
        </bean>
      </list>
    </property>
    <property name="title" value="Hearing Date Inquiry"/>
  </bean>

<!-- Business Object Lookup Definition -->


  <bean id="court-case-hearing-date-lookupDefinition" parent="court-case-hearing-date-lookupDefinition-parentBean"/>

  <bean id="court-case-hearing-date-lookupDefinition-parentBean" abstract="true" parent="LookupDefinition">
    
    <property name="defaultSort">
      <bean parent="SortDefinition">
      </bean>
    </property>
    <property name="lookupFields">
      <list>
        <bean parent="FieldDefinition" p:attributeName="date"/>
        <bean parent="FieldDefinition" p:attributeName="comment"/>
      </list>
    </property>
    <property name="resultFields">
      <list>
        <bean parent="FieldDefinition" p:attributeName="date"/>
        <bean parent="FieldDefinition" p:attributeName="comment"/>
      </list>
    </property>
    <property name="title" value="Hearing Date Lookup"/>
  </bean>
</beans>
