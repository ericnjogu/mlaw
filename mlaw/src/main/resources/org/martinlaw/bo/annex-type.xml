  <bean id="annex-type" parent="annex-type-parentBean"/>

  <bean id="annex-type-parentBean" abstract="true" parent="BusinessObjectEntry">
    <property name="businessObjectClass" value="org.martinlaw.bo.AnnexType"/>
    <property name="inquiryDefinition">
      <ref bean="annex-type-inquiryDefinition"/>
    </property>
    <property name="lookupDefinition">
      <ref bean="annex-type-lookupDefinition"/>
    </property>
    <property name="titleAttribute" value="value"/>
    <property name="attributes">
      <list>
      	<ref bean="annex-type-id"/>
        <ref bean="annex-type-text"/>
      </list>
    </property>
    <property name="objectLabel" value="Annex Type"/>
  </bean>

<!-- Attribute Definitions -->
 <!-- enabled to avoid error stacktraces about missing id attribute on inquiry action -->
 <bean id="annex-type-id" parent="martinlaw-shared-id"/>
 
  <bean id="annex-type-text" parent="annex-type-text-parentBean"/>

  <bean id="annex-type-text-parentBean" abstract="true" parent="AttributeDefinition">
    <property name="forceUppercase" value="false"/>
    <property name="shortLabel" value="Type"/>
    <property name="maxLength" value="50"/>
    <property name="validationPattern">
      <bean parent="AnyCharacterValidationPattern" p:allowWhitespace="true"/>
    </property>
    <property name="required" value="true"/>
    <property name="control">
      <bean parent="TextControlDefinition" p:size="50"/>
    </property>
    <property name="summary" value="Type"/>
    <property name="name" value="value"/>
    <property name="label" value="Type"/>
    <property name="description" value="Type"/>
  </bean>
  

<!-- Business Object Inquiry Definition -->


  <bean id="annex-type-inquiryDefinition" parent="annex-type-inquiryDefinition-parentBean"/>

  <bean id="annex-type-inquiryDefinition-parentBean" abstract="true" parent="InquiryDefinition">
    <property name="inquirySections">
      <list>
        <bean parent="InquirySectionDefinition">
          <property name="numberOfColumns" value="1"/>
          <property name="inquiryFields">
            <list>
            <!-- 
            <bean parent="FieldDefinition" p:attributeName="id"/>
             -->
              <bean parent="FieldDefinition" p:attributeName="value"/>
            </list>
          </property>
          <property name="title" value="Annex Type"/>
        </bean>
      </list>
    </property>
    <property name="title" value="Annex Type Inquiry"/>
  </bean>

<!-- Business Object Lookup Definition -->


  <bean id="annex-type-lookupDefinition" parent="annex-type-lookupDefinition-parentBean"/>

  <bean id="annex-type-lookupDefinition-parentBean" abstract="true" parent="LookupDefinition">
    
    <property name="defaultSort">
      <bean parent="SortDefinition">
      </bean>
    </property>
    <property name="lookupFields">
      <list>
        <!-- <bean parent="FieldDefinition" p:attributeName="id"/>  -->
        <bean parent="FieldDefinition" p:attributeName="value"/>
      </list>
    </property>
    <property name="resultFields">
      <list>
        <!-- <bean parent="FieldDefinition" p:attributeName="id"/> -->
        <bean parent="FieldDefinition" p:attributeName="value"/>
      </list>
    </property>
    <property name="title" value="Annex Type Lookup"/>
  </bean>
</beans>
