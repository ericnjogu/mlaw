<data xmlns="ns:workflow" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="ns:workflow resource:WorkflowData">

	<documentTypes xmlns="ns:workflow/DocumentType"
		xsi:schemaLocation="ns:workflow/DocumentType resource:DocumentType">
		<documentType>
			<name>OpinionConsiderationMaintenanceDocument</name>
			<parent>RiceDocument</parent>
			<description>Opinion Consideration Maintenance Document</description>
			<label>Opinion Consideration Maintenance Document</label>
			<postProcessorName>org.kuali.rice.krad.workflow.postprocessor.KualiPostProcessor</postProcessorName>
			<blanketApproveGroupName namespace="MARTINLAW">lawyer</blanketApproveGroupName>
			<defaultExceptionGroupName namespace="KR-WKFLW">WorkflowAdmin</defaultExceptionGroupName>
			<docHandler>${application.url}/kr-krad/maintenance?methodToCall=docHandler</docHandler>

			<routePaths>
				<routePath>
					<start name="Initiated" nextNode="approvalNode" />
					<requests name="approvalNode" />
				</routePath>
			</routePaths>
			<routeNodes>
				<start name="Initiated">
					<activationType>P</activationType>
					<mandatoryRoute>false</mandatoryRoute>
					<finalApproval>false</finalApproval>
				</start>
				<requests name="approvalNode">
					<activationType>P</activationType>
					<ruleTemplate>org.martinlaw.defaultApprovalTemplate</ruleTemplate>
					<mandatoryRoute>false</mandatoryRoute>
					<finalApproval>false</finalApproval>
				</requests>
			</routeNodes>
			<attributes>
				<attribute>
					<name>MlawDataDictionarySearchableAttribute</name>
				</attribute>
			</attributes>
		</documentType>
	</documentTypes>

	<rules xmlns="ns:workflow/Rule" xsi:schemaLocation="ns:workflow/Rule resource:Rule">
		<!-- OpinionConsiderationMaintenanceDocument rule -->
		<rule>
			<name>org.martinlaw.rules.opinion.consideration</name>
			<documentType>OpinionConsiderationMaintenanceDocument</documentType>
			<!-- The rule template does not have any use at now -->
			<ruleTemplate>org.martinlaw.defaultApprovalTemplate</ruleTemplate>
			<description>Routing rule for OpinionConsideration maintenance
			</description>
			<responsibilities>
				<responsibility>
					<groupName namespace="MARTINLAW">lawyer</groupName>
					<actionRequested>A</actionRequested>
					<priority>1</priority>
				</responsibility>
			</responsibilities>
		</rule>
	</rules>

</data>
	
